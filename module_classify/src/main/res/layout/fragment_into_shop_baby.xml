<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_43"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/into_shop_synthesize"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <TextView
                android:id="@+id/into_shop_text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="综合"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/sp_13" />

            <ImageView
                android:id="@+id/into_shop_synthesize_bottom"
                android:layout_width="@dimen/dp_6"
                android:layout_height="@dimen/dp_3"
                android:layout_alignBottom="@id/into_shop_text1"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginBottom="@dimen/dp_3"
                android:layout_toRightOf="@id/into_shop_text1"
                android:src="@drawable/cgbhdfg" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/into_shop_sales_volume"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <TextView
                android:id="@+id/into_shop_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="销量"
                android:textColor="#333333"
                android:textSize="@dimen/sp_13" />

            <ImageView
                android:id="@+id/into_shop_sales_volume_top"
                android:layout_width="@dimen/dp_6"
                android:layout_height="@dimen/dp_3"
                android:layout_alignTop="@id/into_shop_text2"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_3"
                android:layout_marginBottom="@dimen/dp_3"
                android:layout_toRightOf="@id/into_shop_text2"
                android:src="@drawable/ghfgh" />

            <ImageView
                android:id="@+id/into_shop_sales_volume_bottom"
                android:layout_width="@dimen/dp_6"
                android:layout_height="@dimen/dp_3"
                android:layout_alignBottom="@id/into_shop_text2"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginBottom="@dimen/dp_3"
                android:layout_toRightOf="@id/into_shop_text2"
                android:src="@drawable/khjkjhgjk" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/into_shop_price"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <TextView
                android:id="@+id/into_shop_text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="价格"
                android:textColor="#333333"
                android:textSize="@dimen/sp_13" />

            <ImageView
                android:id="@+id/into_shop_price_top"
                android:layout_width="@dimen/dp_6"
                android:layout_height="@dimen/dp_3"
                android:layout_alignTop="@id/into_shop_text3"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_3"
                android:layout_marginBottom="@dimen/dp_3"
                android:layout_toRightOf="@id/into_shop_text3"
                android:src="@drawable/ghfgh" />

            <ImageView
                android:id="@+id/into_shop_price_bottom"
                android:layout_width="@dimen/dp_6"
                android:layout_height="@dimen/dp_3"
                android:layout_alignBottom="@id/into_shop_text3"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginBottom="@dimen/dp_3"
                android:layout_toRightOf="@id/into_shop_text3"
                android:src="@drawable/khjkjhgjk" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/into_shop_credit"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <TextView
                android:id="@+id/into_shop_text4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="信用"
                android:textColor="#333333"
                android:textSize="@dimen/sp_13" />

            <ImageView
                android:id="@+id/into_shop_credit_top"
                android:layout_width="@dimen/dp_6"
                android:layout_height="@dimen/dp_3"
                android:layout_alignTop="@id/into_shop_text4"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_3"
                android:layout_marginBottom="@dimen/dp_3"
                android:layout_toRightOf="@id/into_shop_text4"
                android:src="@drawable/ghfgh" />

            <ImageView
                android:id="@+id/into_shop_credit_bottom"
                android:layout_width="@dimen/dp_6"
                android:layout_height="@dimen/dp_3"
                android:layout_alignBottom="@id/into_shop_text4"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginBottom="@dimen/dp_3"
                android:layout_toRightOf="@id/into_shop_text4"
                android:src="@drawable/khjkjhgjk" />


        </RelativeLayout>

        <ImageView
            android:id="@+id/into_shop_switchover"
            android:layout_width="@dimen/dp_46"
            android:layout_height="@dimen/dp_45"
            android:layout_gravity="center"
            android:padding="@dimen/dp_15"
            android:src="@drawable/xfxfgvx" />

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/into_shop_rec"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_5"></android.support.v7.widget.RecyclerView>

</LinearLayout>