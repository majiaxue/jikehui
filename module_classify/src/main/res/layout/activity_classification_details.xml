<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.classificationdetails.ClassificationDetailsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_marginTop="@dimen/dp_25"
        android:background="#FFF"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <ImageView
            android:id="@+id/classification_back"
            android:layout_width="@dimen/dp_36"
            android:layout_height="@dimen/dp_44"
            android:layout_centerVertical="true"
            android:padding="@dimen/dp_14"
            android:src="@drawable/icon_fanhui" />

        <LinearLayout
            android:id="@+id/classification_search"
            android:layout_width="@dimen/dp_285"
            android:layout_height="@dimen/dp_28"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:background="@drawable/bg_edit"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/dp_18"
                android:layout_height="@dimen/dp_18"
                android:layout_marginLeft="@dimen/dp_20"
                android:src="@drawable/search" />

            <TextView
                android:id="@+id/classification_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_16"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="请输入要搜索的商品名称"
                android:textColor="#666666"
                android:textSize="@dimen/sp_12" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/classification_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="@dimen/dp_15"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/dp_14"
                android:layout_height="@dimen/dp_14"
                android:src="@drawable/ghfh" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="消息"
                android:textColor="#333333"
                android:textSize="@dimen/sp_12" />
        </LinearLayout>

    </RelativeLayout>

    <android.support.design.widget.TabLayout
        android:id="@+id/classification_tab"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30"
        android:background="#FFFFFF"
        app:tabIndicatorColor="#fd3c15"
        app:tabIndicatorFullWidth="false"
        app:tabIndicatorGravity="bottom"
        app:tabMode="fixed"
        app:tabRippleColor="@android:color/transparent"
        app:tabSelectedTextColor="#fd3c15"
        app:tabTextColor="#333333"></android.support.design.widget.TabLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_43"
        android:background="#FFF"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/classification_synthesize"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <TextView
                android:id="@+id/classification_text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="综合"
                android:textColor="@color/codeText"
                android:textSize="@dimen/sp_13" />

            <ImageView
                android:id="@+id/synthesize_bottom"
                android:layout_width="@dimen/dp_6"
                android:layout_height="@dimen/dp_3"
                android:layout_alignBottom="@id/classification_text1"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginBottom="@dimen/dp_3"
                android:layout_toRightOf="@id/classification_text1"
                android:src="@drawable/cgbhdfg" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/classification_sales_volume"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <TextView
                android:id="@+id/classification_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="销量"
                android:textColor="#333333"
                android:textSize="@dimen/sp_13" />

            <ImageView
                android:id="@+id/sales_volume_top"
                android:layout_width="@dimen/dp_6"
                android:layout_height="@dimen/dp_3"
                android:layout_alignTop="@id/classification_text2"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_3"
                android:layout_marginBottom="@dimen/dp_3"
                android:layout_toRightOf="@id/classification_text2"
                android:src="@drawable/ghfgh" />

            <ImageView
                android:id="@+id/sales_volume_bottom"
                android:layout_width="@dimen/dp_6"
                android:layout_height="@dimen/dp_3"
                android:layout_alignBottom="@id/classification_text2"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginBottom="@dimen/dp_3"
                android:layout_toRightOf="@id/classification_text2"
                android:src="@drawable/khjkjhgjk" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/classification_price"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <TextView
                android:id="@+id/classification_text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="价格"
                android:textColor="#333333"
                android:textSize="@dimen/sp_13" />

            <ImageView
                android:id="@+id/price_top"
                android:layout_width="@dimen/dp_6"
                android:layout_height="@dimen/dp_3"
                android:layout_alignTop="@id/classification_text3"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_3"
                android:layout_marginBottom="@dimen/dp_3"
                android:layout_toRightOf="@id/classification_text3"
                android:src="@drawable/ghfgh" />

            <ImageView
                android:id="@+id/price_bottom"
                android:layout_width="@dimen/dp_6"
                android:layout_height="@dimen/dp_3"
                android:layout_alignBottom="@id/classification_text3"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginBottom="@dimen/dp_3"
                android:layout_toRightOf="@id/classification_text3"
                android:src="@drawable/khjkjhgjk" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/classification_credit"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <TextView
                android:id="@+id/classification_text4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="信用"
                android:textColor="#333333"
                android:textSize="@dimen/sp_13" />

            <ImageView
                android:id="@+id/credit_top"
                android:layout_width="@dimen/dp_6"
                android:layout_height="@dimen/dp_3"
                android:layout_alignTop="@id/classification_text4"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_3"
                android:layout_marginBottom="@dimen/dp_3"
                android:layout_toRightOf="@id/classification_text4"
                android:src="@drawable/ghfgh" />

            <ImageView
                android:id="@+id/credit_bottom"
                android:layout_width="@dimen/dp_6"
                android:layout_height="@dimen/dp_3"
                android:layout_alignBottom="@id/classification_text4"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginBottom="@dimen/dp_3"
                android:layout_toRightOf="@id/classification_text4"
                android:src="@drawable/khjkjhgjk" />


        </RelativeLayout>

        <ImageView
            android:id="@+id/classification_switchover"
            android:layout_width="@dimen/dp_46"
            android:layout_height="@dimen/dp_45"
            android:layout_gravity="center"
            android:padding="@dimen/dp_15"
            android:src="@drawable/xfxfgvx" />

    </LinearLayout>

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/classification_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/classification_rec"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_5"
            android:overScrollMode="never"></android.support.v7.widget.RecyclerView>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
</LinearLayout>
