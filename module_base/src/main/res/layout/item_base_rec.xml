<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_148"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_147"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/base_image"
            android:layout_width="@dimen/dp_110"
            android:layout_height="@dimen/dp_110"
            android:layout_marginLeft="@dimen/dp_12"
            app:actualImageScaleType="focusCrop"
            app:fadeDuration="300"
            app:roundedCornerRadius="@dimen/dp_5" />

        <!--<ImageView-->
        <!--android:id="@+id/base_image"-->
        <!--android:layout_width="@dimen/dp_110"-->
        <!--android:layout_height="@dimen/dp_110"-->
        <!--android:layout_marginLeft="@dimen/dp_12" />-->

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_17"
            android:layout_marginRight="@dimen/dp_13"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/base_linear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/base_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/image_tbk" />

                <TextView
                    android:id="@+id/base_name"
                    android:layout_width="@dimen/dp_180"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_6"
                    android:ellipsize="end"
                    android:lines="1"
                    android:text="【3瓶装】小紫瓶保湿乳液"
                    android:textColor="#222222"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>

            <TextView
                android:id="@+id/base_reduce_price"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_22"
                android:layout_below="@id/base_linear"
                android:layout_marginTop="@dimen/dp_11"
                android:background="@drawable/bg_youhuiquan"
                android:gravity="center"
                android:paddingLeft="@dimen/dp_5"
                android:paddingRight="@dimen/dp_5"
                android:text="可用购物金0元"
                android:textColor="#ffffff"
                android:textSize="@dimen/sp_10" />

            <LinearLayout
                android:id="@+id/base_linear1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/base_reduce_price"
                android:layout_marginTop="@dimen/dp_8"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/base_preferential_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="￥39"
                    android:textColor="#fb4119"
                    android:textSize="@dimen/sp_18"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/base_original_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:includeFontPadding="false"
                    android:text="￥89"
                    android:textColor="#999999"
                    android:textSize="@dimen/sp_15" />

                <View
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="@dimen/dp_1"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/base_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/base_linear1"
                    android:includeFontPadding="false"
                    android:text="已抢64120件"
                    android:textColor="#999999"
                    android:textSize="@dimen/dp_10" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/base_linear1"
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/base_estimate"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_20"
                    android:background="@drawable/shape_text_left"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:paddingLeft="@dimen/dp_5"
                    android:paddingRight="@dimen/dp_5"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/dp_10" />

                <TextView
                    android:visibility="gone"
                    android:id="@+id/base_upgrade"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_20"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:background="@drawable/shape_text_right"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:paddingLeft="@dimen/dp_5"
                    android:paddingRight="@dimen/dp_5"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/dp_10" />

            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="#dedede" />
</LinearLayout>