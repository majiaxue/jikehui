<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_360"
        android:background="@drawable/icon_gengxin"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="@dimen/dp_95"
            android:layout_marginTop="@dimen/dp_115"
            android:includeFontPadding="false"
            android:text="发现"
            android:textColor="#ffffff"
            android:textSize="@dimen/sp_22"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="@dimen/dp_147"
            android:layout_marginTop="@dimen/dp_97"
            android:includeFontPadding="false"
            android:text="新"
            android:textColor="#ffffff"
            android:textSize="@dimen/sp_40"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="@dimen/dp_203"
            android:layout_marginTop="@dimen/dp_99"
            android:includeFontPadding="false"
            android:text="版本"
            android:textColor="#ffffff"
            android:textSize="@dimen/sp_17"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/pop_gen_xin_versions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="@dimen/dp_203"
            android:layout_marginTop="@dimen/dp_125"
            android:includeFontPadding="false"
            android:text="V1.1.1"
            android:textColor="#ffffff"
            android:textSize="@dimen/sp_10"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/pop_gen_xin_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_211"
            android:text="新版本更新"
            android:textColor="#404040"
            android:textSize="@dimen/sp_17" />

        <TextView
            android:id="@+id/pop_gen_xin_text_message"
            android:layout_width="@dimen/dp_193"
            android:layout_height="@dimen/dp_53"
            android:layout_below="@id/pop_gen_xin_text"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_15"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="更新签到、9.9包邮、0元购抖券等功能,更好的支持手机操作系统解决了部分手机闪退的问题" />

        <TextView
            android:id="@+id/pop_gen_xin_bottom"
            android:layout_width="@dimen/dp_205"
            android:layout_height="@dimen/dp_33"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/dp_24"
            android:background="@drawable/bg_22_jianbian"
            android:gravity="center"
            android:text="立即更新"
            android:textColor="#ffffff"
            android:textSize="@dimen/sp_14" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/pop_gen_xin_cancel"
        android:layout_width="@dimen/dp_26"
        android:layout_height="@dimen/dp_26"
        android:layout_marginTop="@dimen/dp_24"
        android:src="@drawable/icon_guanbi" />


</LinearLayout>