<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="@dimen/dp_313"
        android:layout_height="@dimen/dp_344"
        android:background="@drawable/bg_denglutanchuang"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_171"
            android:includeFontPadding="false"
            android:text="您还没有登录"
            android:textColor="#333333"
            android:textSize="@dimen/sp_19" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:includeFontPadding="false"
            android:text="请先登录或注册再进行此操作"
            android:textColor="#999999"
            android:textSize="@dimen/sp_15" />

        <TextView
            android:id="@+id/pop_wei_deng_lu_go_to_login"
            android:layout_width="@dimen/dp_266"
            android:layout_height="@dimen/dp_41"
            android:layout_marginTop="@dimen/dp_34"
            android:background="@drawable/button_denglu"
            android:gravity="center"
            android:text="立即登录"
            android:textColor="#ffffff"
            android:textSize="@dimen/sp_15" />

        <TextView
            android:id="@+id/pop_wei_deng_lu_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/sp_15"
            android:includeFontPadding="false"
            android:text="还未注册？"
            android:textColor="#fc3c15"
            android:textSize="@dimen/sp_15" />
    </LinearLayout>

    <ImageView
        android:id="@+id/pop_wei_deng_lu_cancel"
        android:layout_width="@dimen/dp_35"
        android:layout_height="@dimen/dp_35"
        android:layout_marginTop="@dimen/dp_30"
        android:src="@drawable/icon_guanbi" />

</LinearLayout>