<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_15_topleft_topright"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/pop_choose_specs_img"
        android:layout_width="@dimen/dp_90"
        android:layout_height="@dimen/dp_90"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_27"
        android:scaleType="fitXY" />

    <ImageView
        android:id="@+id/pop_choose_specs_cancel"
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_20"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_15"
        android:src="@drawable/icon_chahao" />

    <TextView
        android:id="@+id/pop_choose_specs_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/pop_choose_specs_img"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_55"
        android:layout_toRightOf="@id/pop_choose_specs_img"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="#333333"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:id="@+id/pop_choose_specs_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/pop_choose_specs_name"
        android:layout_alignBottom="@id/pop_choose_specs_img"
        android:text="￥19.9"
        android:textColor="#fb5318"
        android:textSize="@dimen/sp_18" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/pop_choose_specs_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/pop_choose_specs_img"
        android:layout_alignLeft="@id/pop_choose_specs_img"
        android:layout_marginTop="@dimen/dp_20"
        android:overScrollMode="never" />

    <TextView
        android:id="@+id/pop_choose_specs_btn"
        android:layout_width="@dimen/dp_345"
        android:layout_height="@dimen/dp_45"
        android:layout_below="@id/pop_choose_specs_rv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_30"
        android:background="@drawable/bg_22_fb5318"
        android:gravity="center"
        android:text="去预约"
        android:textColor="#ffffff"
        android:textSize="@dimen/sp_18" />
</RelativeLayout>