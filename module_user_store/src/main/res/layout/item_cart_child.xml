<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_100"
        android:layout_marginBottom="@dimen/dp_10"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/cart_child_check"
            android:layout_width="@dimen/dp_29"
            android:layout_height="@dimen/dp_29"
            android:layout_marginLeft="@dimen/dp_7"
            android:padding="@dimen/dp_5"
            android:src="@drawable/icon_weixuanzhong" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/cart_child_image"
            android:layout_width="@dimen/dp_92"
            android:layout_height="@dimen/dp_92"
            android:layout_marginLeft="@dimen/dp_13"
            app:roundedCornerRadius="@dimen/dp_5" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_92"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_17">

            <TextView
                android:id="@+id/cart_child_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="2"
                android:text="2019夏季新款纯棉白色短袖女T恤个性字母简约......"
                android:textColor="#333333"
                android:textSize="@dimen/sp_12" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_21"
                android:layout_below="@id/cart_child_name"
                android:layout_marginTop="@dimen/dp_11"
                android:background="@drawable/bg_linear5f5"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/cart_child_colour"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:includeFontPadding="false"
                    android:text="白色，"
                    android:textColor="#999999"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:id="@+id/cart_child_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="XL"
                    android:textColor="#999999"
                    android:textSize="@dimen/sp_12" />

                <ImageView
                    android:layout_width="@dimen/dp_8"
                    android:layout_height="@dimen/dp_4"
                    android:layout_marginRight="@dimen/dp_5"
                    android:src="@drawable/icon_gengduo20" />

            </LinearLayout>


            <TextView
                android:id="@+id/cart_child_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:text="￥39.90"
                android:textColor="#fd3c15"
                android:textSize="@dimen/sp_12" />

            <com.example.view.AddAndSubView
                android:id="@+id/cart_child_add_and_sub"
                android:layout_width="@dimen/dp_81"
                android:layout_height="@dimen/dp_21"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"></com.example.view.AddAndSubView>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>