<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_112">

    <ImageView
        android:id="@+id/rv_local_detail_goods_img"
        android:layout_width="@dimen/dp_82"
        android:layout_height="@dimen/dp_82"
        android:layout_margin="@dimen/dp_15"
        android:src="@drawable/img_507" />

    <TextView
        android:id="@+id/rv_local_detail_goods_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/rv_local_detail_goods_img"
        android:layout_toRightOf="@id/rv_local_detail_goods_img"
        android:includeFontPadding="false"
        android:text="干煸大虾"
        android:textColor="#333333"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:id="@+id/rv_local_detail_goods_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rv_local_detail_goods_name"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_toRightOf="@id/rv_local_detail_goods_img"
        android:includeFontPadding="false"
        android:text="家常饭菜"
        android:textColor="#999999"
        android:textSize="@dimen/sp_12" />

    <TextView
        android:id="@+id/rv_local_detail_goods_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rv_local_detail_goods_type"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_toRightOf="@id/rv_local_detail_goods_img"
        android:includeFontPadding="false"
        android:text="周一至周日  |  免预约"
        android:textColor="#999999"
        android:textSize="@dimen/sp_12" />

    <TextView
        android:id="@+id/rv_local_detail_goods_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/rv_local_detail_goods_img"
        android:layout_toRightOf="@id/rv_local_detail_goods_img"
        android:includeFontPadding="false"
        android:text="￥"
        android:textColor="@color/codeText"
        android:textSize="@dimen/sp_11" />

    <TextView
        android:id="@+id/rv_local_detail_goods_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/rv_local_detail_goods_img"
        android:layout_marginLeft="@dimen/dp_3"
        android:layout_toRightOf="@id/rv_local_detail_goods_temp"
        android:text="88"
        android:textColor="@color/codeText"
        android:textSize="@dimen/sp_14" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_alignParentBottom="true"
        android:background="#eeeeee" />
</RelativeLayout>