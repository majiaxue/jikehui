<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/page_top" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/local_detail_banner"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_175"
                android:scaleType="fitXY" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/local_detail_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_25"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_16" />

                <View
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="@dimen/dp_0"
                    android:layout_weight="1" />

                <com.example.view.RatingBarView
                    android:id="@+id/local_detail_star"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_15"
                    app:starEmpty="@drawable/icon_haopingweixuanzhong"
                    app:starFill="@drawable/icon_haopingxingxing"
                    app:starImageSize="@dimen/dp_18" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15">

                <TextView
                    android:id="@+id/local_detail_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_26"
                    android:textColor="#999999"
                    android:textSize="@dimen/sp_12" />

                <ImageView
                    android:id="@+id/local_detail_temp1"
                    android:layout_width="@dimen/dp_11"
                    android:layout_height="@dimen/dp_11"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_150"
                    android:src="@drawable/icon_shijian" />

                <TextView
                    android:id="@+id/local_detail_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_toRightOf="@id/local_detail_temp1"
                    android:textColor="#999999"
                    android:textSize="@dimen/sp_12" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_31"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/local_detail_map"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/dp_13"
                        android:layout_height="@dimen/dp_13"
                        android:layout_marginLeft="@dimen/dp_19"
                        android:src="@drawable/iocn_dizhi" />

                    <TextView
                        android:id="@+id/local_detail_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:textColor="#333333"
                        android:textSize="@dimen/sp_13" />

                    <View
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="@dimen/dp_0"
                        android:layout_weight="1" />

                    <ImageView
                        android:id="@+id/local_detail_choose_address"
                        android:layout_width="@dimen/dp_39"
                        android:layout_height="@dimen/dp_39"
                        android:layout_marginRight="@dimen/dp_4"
                        android:padding="@dimen/dp_10"
                        android:src="@drawable/iocn_daohang" />
                </LinearLayout>

                <View
                    android:layout_width="@dimen/dp_1"
                    android:layout_height="@dimen/dp_40"
                    android:background="#eeeeee" />

                <ImageView
                    android:id="@+id/local_detail_phone"
                    android:layout_width="@dimen/dp_37"
                    android:layout_height="@dimen/dp_37"
                    android:layout_marginLeft="@dimen/dp_4"
                    android:layout_marginRight="@dimen/dp_18"
                    android:padding="@dimen/dp_10"
                    android:src="@drawable/icon_dianhua" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_marginTop="@dimen/dp_16"
                android:background="#eeeeee" />

            <RelativeLayout
                android:id="@+id/local_detail_lingquan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:includeFontPadding="false"
                    android:text="优惠"
                    android:textColor="#666666"
                    android:textSize="@dimen/sp_13" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_56"
                    android:includeFontPadding="false"
                    android:text="可参加以下优惠活动"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_13" />

                <ImageView
                    android:id="@+id/local_detail_temp3"
                    android:layout_width="@dimen/dp_6"
                    android:layout_height="@dimen/dp_10"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_20"
                    android:src="@drawable/icon_youjiantou" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_3"
                    android:layout_toLeftOf="@id/local_detail_temp3"
                    android:includeFontPadding="false"
                    android:text="兑换"
                    android:textColor="#666666"
                    android:textSize="@dimen/sp_15" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/local_detail_lingquan2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_20"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_56"
                    android:background="@drawable/bg_6_99fd3c15"
                    android:includeFontPadding="false"
                    android:paddingLeft="@dimen/dp_5"
                    android:paddingTop="@dimen/dp_1"
                    android:paddingRight="@dimen/dp_5"
                    android:paddingBottom="@dimen/dp_1"
                    android:text="店铺优惠券"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/sp_10" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/local_detail_coupon_rv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_8" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_marginTop="@dimen/dp_15"
                android:background="#eeeeee" />

            <LinearLayout
                android:id="@+id/local_detail_my_coupon"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_43"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:text="我的优惠券"
                    android:textColor="#666666"
                    android:textSize="@dimen/sp_13" />

                <View
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="@dimen/dp_0"
                    android:layout_weight="1" />

                <ImageView
                    android:layout_width="@dimen/dp_6"
                    android:layout_height="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_18"
                    android:src="@drawable/icon_youjiantou" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:background="#eeeeee" />

            <android.support.design.widget.TabLayout
                android:id="@+id/local_detail_tab"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_35"
                app:tabBackground="@android:color/transparent"
                app:tabGravity="fill"
                app:tabIndicatorColor="#fc5917"
                app:tabIndicatorFullWidth="false"
                app:tabIndicatorHeight="@dimen/dp_3"
                app:tabMode="fixed"
                app:tabRippleColor="@android:color/transparent"
                app:tabSelectedTextColor="#fc5917"
                app:tabTextColor="#999999" />

            <android.support.v4.view.ViewPager
                android:id="@+id/local_detail_vp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_453"
                android:overScrollMode="never" />

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>