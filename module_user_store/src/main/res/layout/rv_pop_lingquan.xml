<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rv_pop_lingquan_parent"
    android:layout_width="@dimen/dp_340"
    android:layout_height="@dimen/dp_137"
    android:background="@drawable/backguond_jingqu"
    android:clipChildren="false"
    android:clipToPadding="false">

    <TextView
        android:id="@+id/rv_pop_lingquan_temp1"
        android:layout_width="@dimen/dp_60"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dp_27"
        android:gravity="center"
        android:text="优惠券"
        android:textColor="#ffffff"
        android:textSize="@dimen/sp_29" />

    <LinearLayout
        android:id="@+id/rv_pop_lingquan_temp2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_53"
        android:layout_marginTop="37dp"
        android:layout_toRightOf="@id/rv_pop_lingquan_temp1"
        android:gravity="bottom"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:text="￥"
            android:textColor="@color/codeText"
            android:textSize="@dimen/sp_18" />

        <TextView
            android:id="@+id/rv_pop_lingquan_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:text="5"
            android:textColor="@color/codeText"
            android:textSize="@dimen/sp_28" />

        <TextView
            android:id="@+id/rv_pop_lingquan_demand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_5"
            android:includeFontPadding="false"
            android:text="满50元可使用"
            android:textColor="@color/color333"
            android:textSize="@dimen/sp_15" />
    </LinearLayout>

    <TextView
        android:id="@+id/rv_pop_lingquan_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/rv_pop_lingquan_temp2"
        android:layout_marginTop="@dimen/dp_79"
        android:includeFontPadding="false"
        android:text="有效期至  2019/12/12"
        android:textColor="#dddddd"
        android:textSize="@dimen/sp_13" />

    <ImageView
        android:id="@+id/rv_pop_lingquan_img"
        android:layout_width="@dimen/dp_64"
        android:layout_height="@dimen/dp_64"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="@dimen/dp_m_12"
        android:layout_marginBottom="@dimen/dp_m_12"
        android:src="@drawable/icon_yilingqu" />
</RelativeLayout>