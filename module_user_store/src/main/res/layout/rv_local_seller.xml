<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/rv_local_seller_img"
        android:layout_width="@dimen/dp_82"
        android:layout_height="@dimen/dp_82"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_15"
        android:src="@drawable/img_501" />

    <TextView
        android:id="@+id/rv_local_seller_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/rv_local_seller_img"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_toRightOf="@id/rv_local_seller_img"
        android:includeFontPadding="false"
        android:text="汤小调美食"
        android:textColor="#333333"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:id="@+id/rv_local_seller_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rv_local_seller_name"
        android:layout_alignLeft="@id/rv_local_seller_name"
        android:layout_marginTop="@dimen/dp_9"
        android:includeFontPadding="false"
        android:maxWidth="@dimen/dp_210"
        android:text="郑州市金水区金成国际广场A-01"
        android:textColor="#999999"
        android:textSize="@dimen/sp_12" />

    <TextView
        android:id="@+id/rv_local_seller_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rv_local_seller_address"
        android:layout_alignLeft="@id/rv_local_seller_address"
        android:layout_marginTop="@dimen/dp_8"
        android:includeFontPadding="false"
        android:text="评分"
        android:textColor="#999999"
        android:textSize="@dimen/sp_12" />

    <com.example.view.RatingBarView
        android:id="@+id/rv_local_seller_star"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/rv_local_seller_temp"
        android:layout_marginLeft="@dimen/dp_14"
        android:layout_toRightOf="@id/rv_local_seller_temp"
        app:starEmpty="@drawable/icon_haopingweixuanzhong"
        app:starFill="@drawable/icon_haopingxingxing"
        app:starImageSize="@dimen/dp_18" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_local_seller_rv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rv_local_seller_temp"
        android:layout_alignLeft="@id/rv_local_seller_temp"
        android:layout_marginTop="@dimen/dp_8" />

    <TextView
        android:id="@+id/rv_local_seller_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/rv_local_seller_name"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_15"
        android:text="美食饮品"
        android:textColor="#666666"
        android:textSize="@dimen/sp_13" />

    <TextView
        android:id="@+id/rv_local_seller_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/rv_local_seller_type"
        android:layout_alignBottom="@id/rv_local_seller_address"
        android:text="0km"
        android:textColor="#999999"
        android:textSize="@dimen/sp_12" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_below="@id/rv_local_seller_img"
        android:layout_marginTop="@dimen/dp_15"
        android:background="#eeeeee" />
</RelativeLayout>