<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_351"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_10_fff"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/confirm_order_goshop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_3"
        android:paddingTop="@dimen/dp_16"
        android:paddingBottom="@dimen/dp_16">

        <ImageView
            android:layout_width="@dimen/dp_14"
            android:layout_height="@dimen/dp_13"
            android:src="@drawable/icon_dianpu13" />

        <TextView
            android:id="@+id/confirm_order_shop_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_7"
            android:drawableRight="@drawable/icon_hongjiantou"
            android:drawablePadding="@dimen/dp_8"
            android:includeFontPadding="false"
            android:textColor="@color/codeText"
            android:textSize="@dimen/sp_12" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/confirm_order_inside_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_3"></android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_23"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_8">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:text="配送方式"
            android:textColor="#333333"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:text="快递配送"
            android:textColor="#666666"
            android:textSize="@dimen/sp_12" />

        <View
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_0"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/confirm_order_delivery_txt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:textColor="#666666"
            android:textSize="@dimen/sp_12" />

        <ImageView
            android:layout_width="@dimen/dp_6"
            android:layout_height="@dimen/dp_12"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_4"
            android:src="@drawable/icon_gengduo2" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_24"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_8">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:text="优惠券"
            android:textColor="#333333"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/confirm_order_delivery_choose_coupon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_27"
            android:layout_weight="1"
            android:includeFontPadding="false"
            android:text="优惠￥0.00元"
            android:textColor="#666666"
            android:textSize="@dimen/sp_12" />

        <ImageView
            android:layout_width="@dimen/dp_6"
            android:layout_height="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_4"
            android:src="@drawable/icon_gengduo2" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_25"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_8">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:text="留      言"
            android:textColor="#333333"
            android:textSize="@dimen/sp_12" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_14"
            android:layout_marginRight="@dimen/dp_4"
            android:background="@null"
            android:hint="选填，建议先和商家沟通确认"
            android:textColor="#333333"
            android:textColorHint="#666666"
            android:textSize="@dimen/sp_12" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_25"
        android:layout_marginRight="@dimen/dp_4"
        android:layout_marginBottom="@dimen/dp_20"
        android:orientation="horizontal">

        <View
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_0"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/confirm_order_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="共0件"
            android:textColor="#666666"
            android:textSize="@dimen/sp_10" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_4"
            android:text="小计："
            android:textColor="#333333"
            android:textSize="@dimen/sp_11" />

        <TextView
            android:id="@+id/confirm_order_xiaoji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥0.00"
            android:textColor="@color/codeText"
            android:textSize="@dimen/sp_11" />
    </LinearLayout>
</LinearLayout>