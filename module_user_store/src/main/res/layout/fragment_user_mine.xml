<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/dyhsc_wd_bj" />

    <include
        android:id="@+id/user_mine_status"
        layout="@layout/include_status" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/user_mine_status">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/user_mine_rela"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_176"
                android:layout_centerHorizontal="true"
                android:elevation="@dimen/dp_6"
                android:orientation="vertical">

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/mine_header"
                    android:layout_width="@dimen/dp_54"
                    android:layout_height="@dimen/dp_54"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_41"
                    app:placeholderImage="@drawable/vhjfg"
                    app:placeholderImageScaleType="fitXY"
                    app:roundAsCircle="true" />

                <TextView
                    android:id="@+id/user_mine_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/mine_header"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_toRightOf="@id/mine_header"
                    android:includeFontPadding="false"
                    android:text="干净自由"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    android:id="@+id/user_mine_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/user_mine_name"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_toRightOf="@id/user_mine_name"
                    android:background="@drawable/bg_5_fff"
                    android:gravity="center"
                    android:paddingLeft="@dimen/dp_5"
                    android:paddingRight="@dimen/dp_5"
                    android:text="金牌"
                    android:textColor="#fc6d15"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:id="@+id/user_mine_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/user_mine_name"
                    android:layout_alignBottom="@id/mine_header"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:includeFontPadding="false"
                    android:text="UID：HG2014"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/sp_13" />

                <LinearLayout
                    android:layout_width="@dimen/dp_300"
                    android:layout_height="@dimen/dp_60"
                    android:layout_below="@id/mine_header"
                    android:layout_centerHorizontal="true"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/user_mine_goods_collection"
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/goods_collection_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:includeFontPadding="false"
                            android:text="0"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_18" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_7"
                            android:includeFontPadding="false"
                            android:text="商品收藏"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_12" />
                    </LinearLayout>

                    <View
                        android:layout_width="@dimen/dp_1"
                        android:layout_height="@dimen/dp_19"
                        android:layout_gravity="center"
                        android:background="#ffffff" />

                    <LinearLayout
                        android:id="@+id/user_mine_shop_collect"
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/shop_collect_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:includeFontPadding="false"
                            android:text="0"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_18" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_7"
                            android:includeFontPadding="false"
                            android:text="店铺收藏"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_12" />
                    </LinearLayout>

                    <View
                        android:layout_width="@dimen/dp_1"
                        android:layout_height="@dimen/dp_19"
                        android:layout_gravity="center"
                        android:background="#ffffff" />

                    <LinearLayout
                        android:id="@+id/user_mine_browsing_history"
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/browsing_history_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:includeFontPadding="false"
                            android:text="0"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_18" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_7"
                            android:includeFontPadding="false"
                            android:text="浏览记录"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_12" />
                    </LinearLayout>
                </LinearLayout>

                <ImageView
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:layout_alignTop="@+id/mine_header"
                    android:layout_alignEnd="@+id/mine_header"
                    android:src="@drawable/dyhsc_wdicon_hg" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/user_mine_linea"
                android:layout_width="@dimen/dp_345"
                android:layout_height="@dimen/dp_137"
                android:layout_below="@id/user_mine_rela"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_40"
                android:background="@drawable/bg_my_order"
                android:elevation="@dimen/dp_6"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/user_mine_my_order"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_32"
                    android:layout_marginTop="@dimen/dp_20"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_13"
                        android:layout_weight="1"
                        android:includeFontPadding="false"
                        android:text="@string/my_order"
                        android:textColor="#111111"
                        android:textSize="@dimen/sp_18" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dp_10"
                        android:text="全部订单"
                        android:textColor="#111111"
                        android:textSize="@dimen/sp_11" />

                    <ImageView
                        android:layout_width="@dimen/dp_9"
                        android:layout_height="@dimen/dp_16"
                        android:layout_marginRight="@dimen/dp_15"
                        android:src="@drawable/right_back" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_1"
                    android:layout_marginRight="@dimen/dp_1"
                    android:layout_marginBottom="@dimen/dp_1"
                    android:background="@drawable/bg_10_fff"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/user_mine_daifukuan"
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/dp_34"
                            android:layout_height="@dimen/dp_24"
                            android:src="@drawable/dyhsc_icon_dfk" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_10"
                            android:text="待付款"
                            android:textColor="#333333"
                            android:textSize="@dimen/sp_12" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/user_mine_daifahuo"
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/dp_34"
                            android:layout_height="@dimen/dp_24"
                            android:src="@drawable/dyhsc_icon_dfh" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_10"
                            android:text="待发货"
                            android:textColor="#333333"
                            android:textSize="@dimen/sp_12" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/user_mine_daishouhuo"
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/dp_34"
                            android:layout_height="@dimen/dp_24"
                            android:src="@drawable/dyhsc_icon_psz" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_10"
                            android:text="待收货"
                            android:textColor="#333333"
                            android:textSize="@dimen/sp_12" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/user_mine_daipingjia"
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/dp_34"
                            android:layout_height="@dimen/dp_24"
                            android:src="@drawable/dyhsc_icon_dpj" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_10"
                            android:text="待评价"
                            android:textColor="#333333"
                            android:textSize="@dimen/sp_12" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/user_mine_shouhou"
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/dp_34"
                            android:layout_height="@dimen/dp_24"
                            android:src="@drawable/dyhsc_icon_sh" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_10"
                            android:text="退换/售后"
                            android:textColor="#333333"
                            android:textSize="@dimen/sp_12" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/user_mine_up_yys"
                android:layout_width="@dimen/dp_345"
                android:layout_height="@dimen/dp_63"
                android:layout_below="@id/user_mine_linea"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:src="@drawable/shangchengwode" />

            <LinearLayout
                android:layout_width="@dimen/dp_345"
                android:layout_height="wrap_content"
                android:layout_below="@id/user_mine_up_yys"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_15"
                android:background="@drawable/bg_my_order"
                android:elevation="@dimen/dp_6"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_13"
                    android:layout_marginTop="@dimen/dp_17"
                    android:includeFontPadding="false"
                    android:text="我的工具"
                    android:textColor="#111111"
                    android:textSize="@dimen/sp_18" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_1"
                    android:layout_marginRight="@dimen/dp_1"
                    android:layout_marginBottom="@dimen/dp_1"
                    android:background="@drawable/bg_10_fff"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/user_mine_business_application"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_40"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/dp_16"
                            android:layout_height="@dimen/dp_14"
                            android:layout_marginLeft="@dimen/dp_17"
                            android:src="@drawable/dyhsc_wdicon_sjsq" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:text="商家申请"
                            android:textColor="#333333"
                            android:textSize="@dimen/sp_14" />

                        <View
                            android:layout_width="@dimen/dp_0"
                            android:layout_height="@dimen/dp_0"
                            android:layout_weight="1" />

                        <ImageView
                            android:layout_width="@dimen/dp_6"
                            android:layout_height="@dimen/dp_11"
                            android:layout_marginRight="@dimen/dp_26"
                            android:src="@drawable/right_back" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/user_mine_shipping_address"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_40"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/dp_16"
                            android:layout_height="@dimen/dp_16"
                            android:layout_marginLeft="@dimen/dp_17"
                            android:src="@drawable/dyhsc_wdicon_shdz" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:text="收货地址"
                            android:textColor="#333333"
                            android:textSize="@dimen/sp_14" />

                        <View
                            android:layout_width="@dimen/dp_0"
                            android:layout_height="@dimen/dp_0"
                            android:layout_weight="1" />

                        <ImageView
                            android:layout_width="@dimen/dp_6"
                            android:layout_height="@dimen/dp_11"
                            android:layout_marginRight="@dimen/dp_26"
                            android:src="@drawable/right_back" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/user_mine_discount_coupon"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_40"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/dp_16"
                            android:layout_height="@dimen/dp_16"
                            android:layout_marginLeft="@dimen/dp_17"
                            android:src="@drawable/dyhsc_wdicon_yhq" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:text="优惠券"
                            android:textColor="#333333"
                            android:textSize="@dimen/sp_14" />

                        <View
                            android:layout_width="@dimen/dp_0"
                            android:layout_height="@dimen/dp_0"
                            android:layout_weight="1" />

                        <ImageView
                            android:layout_width="@dimen/dp_6"
                            android:layout_height="@dimen/dp_11"
                            android:layout_marginRight="@dimen/dp_26"
                            android:src="@drawable/right_back" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>