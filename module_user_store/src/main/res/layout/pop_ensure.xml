<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_10_fff_top"
    android:orientation="vertical">

    <TextView
        android:id="@+id/pop_ensure_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_16"
        android:includeFontPadding="false"
        android:text="保障"
        android:textSize="@dimen/sp_20" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_14"
        android:includeFontPadding="false"
        android:text="正品保证"
        android:textColor="#333333"
        android:textSize="@dimen/sp_17" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_10"
        android:includeFontPadding="false"
        android:text="商品支持正品保障服务"
        android:textColor="#666666"
        android:textSize="@dimen/sp_13" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_25"
        android:includeFontPadding="false"
        android:text="极速退货"
        android:textColor="#333333"
        android:textSize="@dimen/sp_17" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_10"
        android:includeFontPadding="false"
        android:text="快递上门服务，极速申请退货"
        android:textColor="#666666"
        android:textSize="@dimen/sp_13" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_25"
        android:includeFontPadding="false"
        android:text="极速退款"
        android:textColor="#333333"
        android:textSize="@dimen/sp_17" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_10"
        android:includeFontPadding="false"
        android:text="为优质会员提供专享服务，快速退款"
        android:textColor="#666666"
        android:textSize="@dimen/sp_13" />

    <TextView
        android:id="@+id/pop_ensure_btn"
        android:layout_width="@dimen/dp_347"
        android:layout_height="@dimen/dp_45"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_80"
        android:layout_marginBottom="@dimen/dp_10"
        android:background="@drawable/bg_btn_login"
        android:gravity="center"
        android:text="完成"
        android:textColor="#f5f5f5"
        android:textSize="@dimen/sp_20" />
</LinearLayout>