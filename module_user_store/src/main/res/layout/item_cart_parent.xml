<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_12"
        android:layout_marginBottom="@dimen/dp_10"
        android:background="@drawable/bg_10_fff"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/cart_parent_go_shop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_13"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/cart_parent_check"
                android:layout_width="@dimen/dp_29"
                android:layout_height="@dimen/dp_29"
                android:layout_marginLeft="@dimen/dp_7"
                android:padding="@dimen/dp_5"
                android:src="@drawable/icon_weixuanzhong" />

            <ImageView
                android:layout_width="@dimen/dp_14"
                android:layout_height="@dimen/dp_13"
                android:layout_marginLeft="@dimen/dp_22"
                android:src="@drawable/icon_dianpu13" />

            <TextView
                android:id="@+id/cart_parent_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_7"
                android:layout_marginRight="@dimen/dp_7"
                android:text="private简约男装"
                android:textColor="#fd3c15"
                android:textSize="@dimen/sp_12" />

            <ImageView
                android:layout_width="@dimen/dp_6"
                android:layout_height="@dimen/dp_12"
                android:src="@drawable/icon_hongjiantou" />
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/cart_parent_rec"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_21"></android.support.v7.widget.RecyclerView>

    </LinearLayout>


</LinearLayout>