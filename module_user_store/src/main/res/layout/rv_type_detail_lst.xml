<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_145"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/type_detail_lst_image"
            android:layout_width="@dimen/dp_125"
            android:layout_height="@dimen/dp_125"
            android:layout_marginLeft="@dimen/dp_15"
            app:roundedCornerRadius="@dimen/dp_5" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_17">

            <TextView
                android:id="@+id/type_detail_lst_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="2"
                android:text="2019夏季新款纯棉白色短袖女T恤个性字母简约......"
                android:textColor="#333333"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/type_detail_lst_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/type_detail_lst_name"
                android:layout_marginTop="@dimen/dp_22"
                android:text="￥39.90"
                android:textColor="#fd3c15"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/type_detail_lst_payment_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/type_detail_lst_price"
                android:layout_marginLeft="@dimen/dp_68"
                android:text="12345人付款"
                android:textColor="#999999"
                android:textSize="@dimen/sp_10" />

            <TextView
                android:id="@+id/type_detail_lst_good_reputation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/type_detail_lst_payment_amount"
                android:layout_marginLeft="@dimen/dp_9"
                android:layout_toRightOf="@id/type_detail_lst_payment_amount"
                android:text="97%好评"
                android:textColor="#999999"
                android:visibility="invisible"
                android:textSize="@dimen/sp_10" />

            <TextView
                android:id="@+id/type_detail_lst_predict"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_17"
                android:layout_below="@id/type_detail_lst_price"
                android:layout_marginTop="@dimen/dp_12"
                android:background="@drawable/bg_5_fd3c15"
                android:gravity="center"
                android:paddingLeft="@dimen/dp_3"
                android:paddingRight="@dimen/dp_3"
                android:text="预估赚￥0.00"
                android:textColor="#ffffff"
                android:textSize="@dimen/sp_11" />

            <TextView
                android:id="@+id/type_detail_lst_shop_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/type_detail_lst_good_reputation"
                android:layout_marginTop="@dimen/dp_44"
                android:text="班迪卡旗舰店"
                android:textColor="#fd3c15"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/type_detail_lst_btn"
                android:layout_width="@dimen/dp_32"
                android:layout_height="@dimen/dp_15"
                android:layout_alignBaseline="@id/type_detail_lst_shop_name"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_19"
                android:background="@drawable/bg_5_fb4_feb"
                android:gravity="center"
                android:text="进店"
                android:visibility="gone"
                android:textColor="#ffffff"
                android:textSize="@dimen/sp_12" />
        </RelativeLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="#f5f5f5" />

</LinearLayout>