<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/confirm_order_img"
        android:layout_width="@dimen/dp_92"
        android:layout_height="@dimen/dp_92"
        android:layout_below="@id/confirm_order_goshop"
        android:layout_marginLeft="@dimen/dp_3"
        android:layout_marginTop="@dimen/dp_6" />

    <TextView
        android:id="@+id/confirm_order_goods"
        android:layout_width="@dimen/dp_207"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/confirm_order_img"
        android:layout_marginLeft="@dimen/dp_13"
        android:layout_toRightOf="@id/confirm_order_img"
        android:ellipsize="end"
        android:includeFontPadding="false"
        android:maxLines="2"
        android:textColor="#777777"
        android:textSize="@dimen/sp_13" />

    <TextView
        android:id="@+id/confirm_order_color"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_21"
        android:layout_below="@id/confirm_order_goods"
        android:layout_alignLeft="@id/confirm_order_goods"
        android:layout_marginTop="@dimen/dp_9"
        android:background="@drawable/bg_5_f5f5f5"
        android:gravity="center"
        android:includeFontPadding="false"
        android:paddingLeft="@dimen/dp_4"
        android:paddingRight="@dimen/dp_4"
        android:textColor="#999999"
        android:textSize="@dimen/sp_12" />

    <TextView
        android:id="@+id/confirm_order_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/confirm_order_goods"
        android:layout_alignBottom="@id/confirm_order_img"
        android:includeFontPadding="false"
        android:textColor="@color/codeText"
        android:textSize="@dimen/sp_15" />

    <LinearLayout
        android:layout_width="@dimen/dp_81"
        android:layout_height="@dimen/dp_21"
        android:layout_alignBottom="@id/confirm_order_img"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_44"
        android:background="@drawable/bg_3_eee_border"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/confirm_order_minus"
            android:layout_width="@dimen/dp_22"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="â€”"
            android:textColor="#999999"
            android:textSize="@dimen/sp_14" />

        <View
            android:layout_width="@dimen/dp_1"
            android:layout_height="match_parent"
            android:background="#eeeeee" />

        <TextView
            android:id="@+id/confirm_order_count"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:includeFontPadding="false"
            android:textColor="#666666"
            android:textSize="@dimen/sp_12" />

        <View
            android:layout_width="@dimen/dp_1"
            android:layout_height="match_parent"
            android:background="#eeeeee" />

        <TextView
            android:id="@+id/confirm_order_add"
            android:layout_width="@dimen/dp_22"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="+"
            android:textColor="#999999"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>
</RelativeLayout>