<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/rv_goods_commend_head"
        android:layout_width="@dimen/dp_39"
        android:layout_height="@dimen/dp_39"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_17"
        android:src="@drawable/icon_zhifubao" />

    <TextView
        android:id="@+id/rv_goods_commend_share"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_25"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp_25"
        android:layout_marginRight="@dimen/dp_15"
        android:background="@drawable/bg_13_fee9e6"
        android:drawableLeft="@drawable/icon_shequ_share"
        android:drawablePadding="@dimen/dp_6"
        android:gravity="center_vertical"
        android:includeFontPadding="false"
        android:minWidth="@dimen/dp_61"
        android:paddingLeft="@dimen/dp_11"
        android:paddingRight="@dimen/dp_10"
        android:text="分享"
        android:textColor="#fc5917"
        android:textSize="@dimen/sp_13" />

    <TextView
        android:id="@+id/rv_goods_commend_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/rv_goods_commend_head"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_toLeftOf="@id/rv_goods_commend_share"
        android:layout_toRightOf="@id/rv_goods_commend_head"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="淘宝客"
        android:textColor="#333333"
        android:textSize="@dimen/sp_16" />

    <TextView
        android:id="@+id/rv_goods_commend_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/rv_goods_commend_head"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_toRightOf="@id/rv_goods_commend_head"
        android:text="2019-05-17  09:24:20"
        android:textColor="#999999"
        android:textSize="@dimen/sp_11" />

    <TextView
        android:id="@+id/rv_goods_commend_content"
        android:layout_width="@dimen/dp_200"
        android:layout_height="wrap_content"
        android:layout_below="@id/rv_goods_commend_share"
        android:layout_alignLeft="@id/rv_goods_commend_head"
        android:layout_marginTop="@dimen/dp_15"
        android:textColor="#333333"
        android:textSize="@dimen/sp_13" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_goods_commend_img"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_101"
        android:layout_below="@id/rv_goods_commend_content"
        android:layout_alignLeft="@id/rv_goods_commend_head"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_15" />

    <TextView
        android:id="@+id/rv_goods_commend_profit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rv_goods_commend_img"
        android:layout_alignLeft="@id/rv_goods_commend_head"
        android:layout_marginTop="@dimen/dp_15"
        android:background="#fc5917"
        android:includeFontPadding="false"
        android:paddingLeft="@dimen/dp_15"
        android:paddingTop="@dimen/dp_5"
        android:paddingRight="@dimen/dp_15"
        android:paddingBottom="@dimen/dp_5"
        android:text="分享赚0.00元"
        android:textColor="#ffffff"
        android:textSize="@dimen/sp_12" />


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_8"
        android:layout_below="@id/rv_goods_commend_profit"
        android:layout_marginTop="@dimen/dp_25"
        android:background="#f5f5f5" />

</RelativeLayout>