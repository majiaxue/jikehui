<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_405"
        android:background="@drawable/bg_huiyuanquanyi"
        android:clipChildren="false"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/dp_33"
            android:layout_height="@dimen/dp_29"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_11"
            android:src="@drawable/icon_vip" />

        <ImageView
            android:id="@+id/vp_operator_gain_level"
            android:layout_width="@dimen/dp_119"
            android:layout_height="@dimen/dp_23"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_11"
            android:src="@drawable/text_chuji" />

        <LinearLayout
            android:layout_width="@dimen/dp_307"
            android:layout_height="@dimen/dp_81"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_35"
            android:background="@drawable/bg_5_e54d62"
            android:clipChildren="false"
            android:orientation="vertical">

            <TextView
                android:layout_width="@dimen/dp_63"
                android:layout_height="@dimen/dp_17"
                android:layout_marginLeft="@dimen/dp_m_4"
                android:layout_marginTop="@dimen/dp_7"
                android:background="#f84f4f"
                android:gravity="center"
                android:text="升级条件"
                android:textColor="#ffffff"
                android:textSize="@dimen/sp_11" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/vp_operator_gain_factor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15" />
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/vp_operator_gain_quanyi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>