<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_264"
    android:layout_height="@dimen/dp_325"
    android:background="@drawable/liuyan"
    android:orientation="vertical">

    <EditText
        android:id="@+id/pop_product_liuyan_name"
        android:layout_width="@dimen/dp_212"
        android:layout_height="@dimen/dp_28"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_132"
        android:background="@drawable/bg_5_e5e5e5_border"
        android:gravity="center_vertical"
        android:hint="姓名"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:paddingLeft="@dimen/dp_12"
        android:textColor="#333333"
        android:textColorHint="#999999"
        android:textCursorDrawable="@drawable/edit_cursor"
        android:textSize="@dimen/sp_12" />

    <EditText
        android:id="@+id/pop_product_liuyan_phone"
        android:layout_width="@dimen/dp_212"
        android:layout_height="@dimen/dp_28"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_8"
        android:background="@drawable/bg_5_e5e5e5_border"
        android:digits="1234567890"
        android:gravity="center_vertical"
        android:hint="手机号"
        android:includeFontPadding="false"
        android:inputType="phone"
        android:maxLength="11"
        android:maxLines="1"
        android:paddingLeft="@dimen/dp_12"
        android:textColor="#333333"
        android:textColorHint="#999999"
        android:textCursorDrawable="@drawable/edit_cursor"
        android:textSize="@dimen/sp_12" />

    <EditText
        android:id="@+id/pop_product_liuyan_content"
        android:layout_width="@dimen/dp_212"
        android:layout_height="@dimen/dp_49"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_7"
        android:background="@drawable/bg_5_e5e5e5_border"
        android:gravity="start"
        android:hint="留言"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:paddingLeft="@dimen/dp_12"
        android:paddingTop="@dimen/dp_7"
        android:textColor="#333333"
        android:textColorHint="#999999"
        android:textCursorDrawable="@drawable/edit_cursor"
        android:textSize="@dimen/sp_12" />

    <TextView
        android:id="@+id/pop_product_liuyan_btn"
        android:layout_width="@dimen/dp_195"
        android:layout_height="@dimen/dp_36"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_15"
        android:background="@drawable/bg_18_f19149"
        android:gravity="center"
        android:text="一键提交"
        android:textColor="#ffffff"
        android:textSize="@dimen/sp_15" />
</LinearLayout>