<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center">

    <RelativeLayout
        android:layout_width="@dimen/dp_167"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/bg_rec5">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/universal_list_rec_image"
            android:layout_width="@dimen/dp_167"
            android:layout_height="@dimen/dp_173"
            android:scaleType="fitXY"
            app:roundBottomLeft="false"
            app:roundBottomRight="false"
            app:roundTopLeft="true"
            app:roundTopRight="true"
            app:roundedCornerRadius="@dimen/dp_5" />

        <TextView
            android:id="@+id/universal_list_rec_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/universal_list_rec_image"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_12"
            android:ellipsize="end"
            android:lines="2"
            android:text="2019夏季新款纯棉白色短袖女T恤个性字母简约......"
            android:textColor="#333333"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/universal_list_rec_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/universal_list_rec_name"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_10"
            android:text="￥39.90"
            android:textColor="#fb4119"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/universal_list_rec_payment_amount"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_22"
            android:layout_below="@id/universal_list_rec_name"
            android:layout_alignTop="@id/universal_list_rec_price"
            android:layout_alignParentRight="true"
            android:background="@drawable/bg_youhuiquan"
            android:gravity="center"
            android:paddingLeft="@dimen/dp_5"
            android:paddingRight="@dimen/dp_5"
            android:text="可用购物金0元"
            android:textColor="#ffffff"
            android:textSize="@dimen/sp_10" />


        <RelativeLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/universal_list_rec_price"
            android:layout_marginLeft="@dimen/dp_13"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_13"
            android:layout_marginBottom="@dimen/dp_11">

            <TextView
                android:id="@+id/universal_list_rec_yuguzhuan"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_20"
                android:background="@drawable/shape_text_left"
                android:gravity="center"
                android:paddingLeft="@dimen/dp_5"
                android:paddingRight="@dimen/dp_5"
                android:text="预估赚7.29"
                android:textColor="#ffffff"
                android:textSize="@dimen/sp_10" />

            <TextView
                android:id="@+id/universal_list_rec_shengjizhuan"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_20"
                android:layout_alignParentRight="true"
                android:background="@drawable/shape_text_right"
                android:gravity="center"
                android:includeFontPadding="false"
                android:paddingLeft="@dimen/dp_5"
                android:paddingRight="@dimen/dp_5"
                android:text="升级赚11.89"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/sp_10" />
        </RelativeLayout>


    </RelativeLayout>

</RelativeLayout>