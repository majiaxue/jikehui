<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.main.GuideActivity">


    <com.stx.xhb.xbanner.XBanner
        android:id="@+id/guide_banner"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:isAutoPlay="false"
        app:pointTopBottomPadding="@dimen/dp_20"
        app:pointNormal="@drawable/shape_normal_gay"
        app:pointSelect="@drawable/shape_select_red" />


    <TextView
        android:id="@+id/guide_skip"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_30"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/dp_35"
        android:layout_marginRight="@dimen/dp_15"
        android:background="@drawable/skip"
        android:gravity="center"
        android:text="跳过"
        android:textColor="#222222"
        android:textSize="@dimen/dp_12" />

</RelativeLayout>
