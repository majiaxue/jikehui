<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#eeeeee"
    tools:context="com.example.secondarydetails.SecondaryDetailsActivity">

    <include layout="@layout/include_status" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/secondary_details_image_back"
            android:layout_width="@dimen/dp_28"
            android:layout_height="@dimen/dp_36"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_5"
            android:padding="@dimen/dp_10"
            android:src="@drawable/icon_fanhui" />

        <LinearLayout
            android:id="@+id/secondary_details_search"
            android:layout_width="@dimen/dp_280"
            android:layout_height="@dimen/dp_28"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:background="@drawable/bg_edit"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_16"
                android:text="请输入要搜索的商品名称"
                android:textColor="#666666"
                android:textSize="@dimen/sp_12" />

        </LinearLayout>

    </RelativeLayout>

    <android.support.design.widget.TabLayout
        android:id="@+id/secondary_details_tab"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:background="#FFFFFF"
        app:tabIndicatorColor="#fb4119"
        app:tabIndicatorFullWidth="false"
        app:tabIndicatorGravity="bottom"
        app:tabMode="scrollable"
        app:tabRippleColor="@android:color/transparent"
        app:tabSelectedTextColor="#fb4119"
        app:tabTextColor="#222222" />

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/secondary_details_smart_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/secondary_details_rec"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="visible"></android.support.v7.widget.RecyclerView>

                <ImageView
                    android:id="@+id/secondary_details_no_goods"
                    android:layout_width="@dimen/dp_300"
                    android:layout_height="@dimen/dp_220"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dp_150"
                    android:src="@drawable/no_goods"
                    android:visibility="gone" />

            </LinearLayout>


        </android.support.v4.widget.NestedScrollView>


    </com.scwang.smartrefresh.layout.SmartRefreshLayout>


</LinearLayout>
