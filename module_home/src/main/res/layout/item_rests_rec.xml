<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="@dimen/dp_345"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@drawable/bg_10_fff">

        <RelativeLayout
            android:id="@+id/rests_relative"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/rests_rec_shop_icon"
                android:layout_width="@dimen/dp_33"
                android:layout_height="@dimen/dp_33"
                android:layout_margin="@dimen/dp_11"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/rests_rec_shop_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/rests_rec_shop_icon"
                android:includeFontPadding="false"
                android:text="天使婚纱礼服馆"
                android:textColor="#333333"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/rests_rec_shop_id"
                android:layout_width="@dimen/dp_55"
                android:layout_height="@dimen/dp_20"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_11"
                android:background="@drawable/bg_2_fc3c15_border"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="进店逛逛"
                android:textColor="#fc3c15"
                android:textSize="@dimen/sp_10" />

        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rests_rec_goods_rec"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rests_relative"
            android:layout_marginBottom="@dimen/dp_10"></android.support.v7.widget.RecyclerView>

    </RelativeLayout>

</LinearLayout>