<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_15"
    android:layout_marginTop="@dimen/dp_10"
    android:layout_marginRight="@dimen/dp_15"
    android:background="@drawable/bg_corner_radius10"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/free_charge_rec_activity_image"
            android:layout_width="@dimen/dp_87"
            android:layout_height="@dimen/dp_87"
            android:layout_marginLeft="@dimen/dp_13"
            android:layout_marginTop="@dimen/dp_16"
            app:roundedCornerRadius="@dimen/dp_3" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_13"
            android:layout_marginRight="@dimen/dp_15">

            <ImageView
                android:id="@+id/free_charge_rec_activity_type"
                android:layout_width="@dimen/dp_43"
                android:layout_height="@dimen/dp_19"
                android:src="@drawable/image_tbk" />

            <TextView
                android:id="@+id/free_charge_rec_activity_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/free_charge_rec_activity_type"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_toRightOf="@id/free_charge_rec_activity_type"
                android:ellipsize="end"
                android:includeFontPadding="false"
                android:lines="1"
                android:text="【3瓶装】小紫瓶保湿乳液"
                android:textColor="#222222"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/free_charge_rec_activity_preferential_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/free_charge_rec_activity_type"
                android:layout_alignLeft="@id/free_charge_rec_activity_type"
                android:layout_marginTop="@dimen/dp_9"
                android:includeFontPadding="false"
                android:text="￥4.99"
                android:textColor="#fb3912"
                android:textSize="@dimen/sp_18"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/free_charge_rec_activity_original_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/free_charge_rec_activity_title"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_14"
                android:layout_toRightOf="@id/free_charge_rec_activity_preferential_price"
                android:includeFontPadding="false"
                android:text="￥5.99"
                android:textColor="#999999"
                android:textSize="@dimen/sp_12"
                android:visibility="gone"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/free_charge_rec_activity_original_price"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dp_5"
                android:includeFontPadding="false"
                android:text="付款4.99元，补贴4.99元"
                android:textColor="#999999"
                android:textSize="@dimen/sp_10"
                android:visibility="gone" />

            <ProgressBar
                android:id="@+id/free_charge_rec_activity_progress"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="@dimen/dp_217"
                android:layout_height="@dimen/dp_9"
                android:layout_below="@id/free_charge_rec_activity_preferential_price"
                android:layout_marginTop="@dimen/dp_8"
                android:max="100"
                android:progress="50"
                android:progressDrawable="@drawable/bg_progress" />

            <TextView
                android:id="@+id/free_charge_rec_activity_order_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/free_charge_rec_activity_progress"
                android:layout_marginTop="@dimen/dp_6"
                android:includeFontPadding="false"
                android:text="共1100单"
                android:textColor="#999999"
                android:textSize="@dimen/sp_10" />

            <TextView
                android:id="@+id/free_charge_rec_order_activity_order_residue_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/free_charge_rec_activity_progress"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dp_6"
                android:includeFontPadding="false"
                android:text="剩余0单"
                android:textColor="#999999"
                android:textSize="@dimen/sp_10" />


        </RelativeLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_18"
        android:layout_marginRight="@dimen/dp_15"
        android:background="#dedede" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_10"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <TextView
            android:layout_width="@dimen/dp_67"
            android:layout_height="@dimen/dp_26"
            android:background="@drawable/bg_text_5_fce4df"
            android:gravity="center"
            android:text="可抢用户"
            android:textColor="#fb4119"
            android:textSize="@dimen/dp_11" />

        <TextView
            android:id="@+id/free_charge_rec_activity_threshold"
            android:layout_width="@dimen/dp_170"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_14"
            android:text="超级会员，青铜，银铜，金铜"
            android:textColor="#999999"
            android:textSize="@dimen/sp_13" />

        <View
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_0"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/free_charge_rec_activity_click"
            android:layout_width="@dimen/dp_55"
            android:layout_height="@dimen/dp_25"
            android:background="@drawable/bg_red5"
            android:gravity="center"
            android:text="领红包"
            android:textColor="#ffffff"
            android:textSize="@dimen/dp_12" />

    </LinearLayout>

</LinearLayout>