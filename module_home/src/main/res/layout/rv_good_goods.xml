<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/rv_good_goods_head"
        android:layout_width="@dimen/dp_39"
        android:layout_height="@dimen/dp_39"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_17" />

    <TextView
        android:id="@+id/rv_good_goods_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/rv_good_goods_head"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_toRightOf="@id/rv_good_goods_head"
        android:textColor="#333333"
        android:textSize="@dimen/sp_16" />

    <TextView
        android:id="@+id/rv_good_goods_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/rv_good_goods_head"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_toRightOf="@id/rv_good_goods_head"
        android:textColor="#999999"
        android:textSize="@dimen/sp_11" />

    <TextView
        android:id="@+id/rv_good_goods_content"
        android:layout_width="@dimen/dp_176"
        android:layout_height="wrap_content"
        android:layout_below="@id/rv_good_goods_time"
        android:layout_alignLeft="@id/rv_good_goods_time"
        android:layout_marginTop="@dimen/dp_15"
        android:textColor="#333333"
        android:textSize="@dimen/sp_13" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_good_goods_img"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_101"
        android:layout_below="@id/rv_good_goods_content"
        android:layout_alignLeft="@id/rv_good_goods_time"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_15" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_8"
        android:layout_below="@id/rv_good_goods_img"
        android:layout_marginTop="@dimen/dp_25"
        android:background="#f5f5f5" />

</RelativeLayout>