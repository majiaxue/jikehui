<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="@dimen/dp_355"
        android:layout_height="@dimen/dp_100"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/bg_10_fff">

        <TextView
            android:id="@+id/product_center_rec_ranking"
            android:layout_width="@dimen/dp_18"
            android:layout_height="@dimen/dp_43"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="1"
            android:textColor="#f5f5f5"
            android:textSize="@dimen/sp_18"
            android:textStyle="bold" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/product_center_rec_pic"
            android:layout_width="@dimen/dp_66"
            android:layout_height="@dimen/dp_66"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toRightOf="@id/product_center_rec_ranking"
            app:roundedCornerRadius="@dimen/dp_10" />

        <TextView
            android:id="@+id/product_center_rec_name"
            android:layout_width="@dimen/dp_120"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/product_center_rec_pic"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_toRightOf="@id/product_center_rec_pic"
            android:ellipsize="end"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:text="淘宝客淘客优"
            android:textColor="#222222"
            android:textSize="@dimen/sp_14"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/product_center_rec_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/product_center_rec_pic"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_23"
            android:text="￥9999"
            android:textColor="#fb4119"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/product_center_rec_intro"
            android:layout_width="@dimen/dp_226"
            android:layout_height="wrap_content"
            android:layout_below="@id/product_center_rec_name"
            android:layout_alignLeft="@id/product_center_rec_name"
            android:layout_marginTop="@dimen/dp_10"
            android:ellipsize="end"
            android:includeFontPadding="false"
            android:maxLines="2"
            android:text="我是简介我是简介我是简介我是简介我是简介我是简介..."
            android:textColor="#999999"
            android:textSize="@dimen/sp_12"
            android:textStyle="bold" />

    </RelativeLayout>

</LinearLayout>