<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_15"
    android:layout_marginRight="@dimen/dp_5"
    android:gravity="center"
    android:orientation="vertical">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/good_choice_image"
        android:layout_width="@dimen/dp_87"
        android:layout_height="@dimen/dp_53" />

    <TextView
        android:id="@+id/good_choice_name"
        android:layout_width="@dimen/dp_95"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_12"
        android:ellipsize="end"
        android:lines="1"
        android:text="稙优泉化妆品买....."
        android:textColor="#222222"
        android:textSize="@dimen/sp_12" />

    <LinearLayout
        android:layout_width="@dimen/dp_95"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_9"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/good_choice_preferential_price"
            android:layout_width="@dimen/dp_43"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:text="￥39.90"
            android:textColor="#fd3c15"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/good_choice_original_price"
            android:layout_width="@dimen/dp_27"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_12"
            android:ellipsize="end"
            android:lines="1"
            android:text="96.50"
            android:textColor="#999999"
            android:textSize="@dimen/sp_10" />

    </LinearLayout>

</LinearLayout>