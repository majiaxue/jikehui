<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/rv_order_info_img"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        app:roundBottomLeft="true"
        app:roundBottomRight="true"
        app:roundTopLeft="true"
        app:roundTopRight="true"
        app:roundedCornerRadius="@dimen/dp_2" />

    <TextView
        android:id="@+id/rv_order_info_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_13"
        android:layout_toRightOf="@id/rv_order_info_img"
        android:text="【爆款】招牌素三鲜"
        android:textColor="#333333"
        android:textSize="@dimen/sp_12" />

    <TextView
        android:id="@+id/rv_order_info_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/rv_order_info_name"
        android:layout_alignBottom="@id/rv_order_info_img"
        android:text="X1"
        android:textColor="#999999"
        android:textSize="@dimen/sp_10" />

    <TextView
        android:id="@+id/rv_order_info_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="￥19.9"
        android:textColor="#333333"
        android:textSize="@dimen/sp_16" />
</RelativeLayout>