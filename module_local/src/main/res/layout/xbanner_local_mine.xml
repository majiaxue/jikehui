<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/xbanner_local_mine_parent"
    android:layout_width="@dimen/dp_203"
    android:layout_height="@dimen/dp_146"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_48"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/xbanner_local_mine_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥5"
            android:textColor="#ffffff"
            android:textSize="@dimen/sp_30" />

        <TextView
            android:id="@+id/xbanner_local_mine_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(x2张)"
            android:textColor="#ffffff"
            android:textSize="@dimen/sp_16" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_5"
        android:text="优惠红包全场可用"
        android:textColor="#ffffff"
        android:textSize="@dimen/sp_15" />
</LinearLayout>