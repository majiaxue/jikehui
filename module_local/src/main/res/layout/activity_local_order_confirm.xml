<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/page_top_fb5" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0"
        android:layout_weight="1"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_25"
                android:includeFontPadding="false"
                android:text="收货地址"
                android:textColor="#333333"
                android:textSize="@dimen/sp_20" />

            <RelativeLayout
                android:id="@+id/local_order_confirm_rela"
                android:layout_width="@dimen/dp_362"
                android:layout_height="@dimen/dp_104"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/background_dizhi">

                <TextView
                    android:id="@+id/local_order_confirm_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_22"
                    android:includeFontPadding="false"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_15" />

                <TextView
                    android:id="@+id/local_order_confirm_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/local_order_confirm_name"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_toRightOf="@id/local_order_confirm_name"
                    android:includeFontPadding="false"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_15" />

                <TextView
                    android:id="@+id/local_order_confirm_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/local_order_confirm_name"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="@dimen/dp_29"
                    android:includeFontPadding="false"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_14" />

            </RelativeLayout>

            <TextView
                android:id="@+id/local_order_confirm_add"
                android:layout_width="@dimen/dp_137"
                android:layout_height="@dimen/dp_32"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginBottom="@dimen/dp_28"
                android:background="@drawable/bg_16_000"
                android:gravity="center"
                android:text="+ 添加收货地址"
                android:textColor="#333333"
                android:textSize="@dimen/sp_12" />

            <LinearLayout
                android:layout_width="@dimen/dp_345"
                android:layout_height="@dimen/dp_44"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_6"
                android:background="@drawable/bg_5_f5f5f5"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:text="立即送出"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_14" />

                <View
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="@dimen/dp_0"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/local_order_confirm_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_12"
                    android:text="约15:45送达"
                    android:textColor="#fb5318"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/local_order_confirm_choose_pay"
                android:layout_width="@dimen/dp_345"
                android:layout_height="@dimen/dp_44"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_6"
                android:layout_marginBottom="@dimen/dp_7"
                android:background="@drawable/bg_5_f5f5f5"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:text="支付方式"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_14" />

                <View
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="@dimen/dp_0"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/local_order_confirm_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_12"
                    android:drawableRight="@drawable/icon_youjiantou"
                    android:drawablePadding="@dimen/dp_5"
                    android:text="支付宝"
                    android:textColor="#fb5318"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>

            <TextView
                android:id="@+id/local_order_confirm_shop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_23"
                android:text="秘制虾尾"
                android:textColor="#333333"
                android:textSize="@dimen/sp_20" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/local_order_confirm_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15" />

            <LinearLayout
                android:id="@+id/local_order_confirm_songtype"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_50"
                android:layout_marginRight="@dimen/dp_15"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/dp_45"
                    android:layout_height="@dimen/dp_16"
                    android:background="@drawable/bg_2_fb5318"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:text="配送方式"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/sp_10" />

                <TextView
                    android:id="@+id/local_order_confirm_peisong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:text="商家配送"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_12" />

                <View
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="@dimen/dp_0"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/local_order_confirm_peisongfei"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:text="￥0"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_12" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_15"
                android:background="#dedede" />

            <LinearLayout
                android:id="@+id/local_order_confirm_coupon_money"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_15"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/dp_45"
                    android:layout_height="@dimen/dp_16"
                    android:background="@drawable/bg_2_fde2d8"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:text="优惠"
                    android:textColor="#fb5318"
                    android:textSize="@dimen/sp_10" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:text="优惠券"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_12" />

                <View
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="@dimen/dp_0"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/local_order_confirm_coupon_money_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:text="-￥0"
                    android:textColor="#fb5318"
                    android:textSize="@dimen/sp_12" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_15"
                android:background="#dedede" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_15"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/dp_45"
                    android:layout_height="@dimen/dp_16"
                    android:background="@drawable/bg_2_fde2d8"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:text="满减"
                    android:textColor="#fb5318"
                    android:textSize="@dimen/sp_10" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:text="店铺满减优惠"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_12" />

                <View
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="@dimen/dp_0"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/local_order_confirm_reduce_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:text="-￥0"
                    android:textColor="#fb5318"
                    android:textSize="@dimen/sp_12" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_15"
                android:background="#dedede" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="@dimen/dp_22"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_marginBottom="@dimen/dp_20"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="总计："
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:id="@+id/local_order_confirm_total_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥19"
                    android:textColor="#fb5318"
                    android:textSize="@dimen/sp_18" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50">

        <TextView
            android:id="@+id/local_order_confirm_final_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:text="￥19.9"
            android:textColor="#fb5318"
            android:textSize="@dimen/sp_18" />

        <TextView
            android:id="@+id/local_order_confirm_btn"
            android:layout_width="@dimen/dp_141"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="#fb5318"
            android:gravity="center"
            android:text="确认支付"
            android:textColor="#ffffff"
            android:textSize="@dimen/sp_16" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5"
            android:layout_toLeftOf="@id/local_order_confirm_btn"
            android:background="#dedede" />
    </RelativeLayout>
</LinearLayout>