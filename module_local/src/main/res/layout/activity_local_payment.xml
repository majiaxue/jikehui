<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_90"
        android:background="@drawable/background_shouyin" />

    <RelativeLayout
        android:id="@+id/local_payment_temp1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_2"
        android:layout_marginTop="@dimen/dp_23">

        <ImageView
            android:id="@+id/local_payment_back"
            android:layout_width="@dimen/dp_28"
            android:layout_height="@dimen/dp_36"
            android:padding="@dimen/dp_10"
            android:src="@drawable/icon_fanhui_bai" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:includeFontPadding="false"
            android:text="支付收银台"
            android:textColor="#ffffff"
            android:textSize="@dimen/sp_18" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="@dimen/dp_351"
        android:layout_height="@dimen/dp_233"
        android:layout_below="@id/local_payment_temp1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_4"
        android:background="@drawable/pop_clear_cache"
        android:elevation="@dimen/dp_4"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_32"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/dp_10"
                android:layout_height="@dimen/dp_4"
                android:src="@drawable/icon_yuandian1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:includeFontPadding="false"
                android:text="总共需支付"
                android:textColor="#474855"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/local_payment_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_5"
                android:includeFontPadding="false"
                android:text="￥150"
                android:textColor="@color/codeText"
                android:textSize="@dimen/sp_15" />

            <ImageView
                android:layout_width="@dimen/dp_10"
                android:layout_height="@dimen/dp_4"
                android:src="@drawable/icon_yuandian2" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/local_payment_weixin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_26"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/dp_46"
                android:layout_height="@dimen/dp_46"
                android:layout_marginLeft="@dimen/dp_14"
                android:src="@drawable/icon_weixin2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_21"
                android:text="微信支付"
                android:textColor="#000000"
                android:textSize="@dimen/sp_16" />

            <View
                android:layout_width="@dimen/dp_0"
                android:layout_height="@dimen/dp_0"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/local_payment_weixin_img"
                android:layout_width="@dimen/dp_19"
                android:layout_height="@dimen/dp_19"
                android:layout_marginRight="@dimen/dp_7"
                android:src="@drawable/icon_xuanzhong" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/local_payment_zfb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_27"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/dp_46"
                android:layout_height="@dimen/dp_46"
                android:layout_marginLeft="@dimen/dp_14"
                android:src="@drawable/icon_zhifubao" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_21"
                android:text="支付宝支付"
                android:textColor="#000000"
                android:textSize="@dimen/sp_16" />

            <View
                android:layout_width="@dimen/dp_0"
                android:layout_height="@dimen/dp_0"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/local_payment_zfb_img"
                android:layout_width="@dimen/dp_19"
                android:layout_height="@dimen/dp_19"
                android:layout_marginRight="@dimen/dp_7"
                android:src="@drawable/icon_weixuanzhong" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/local_payment_btn"
        android:layout_width="@dimen/dp_351"
        android:layout_height="@dimen/dp_38"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp_10"
        android:background="@drawable/bg_5_feb_fb4"
        android:gravity="center"
        android:text="确认支付"
        android:textColor="#ffffff"
        android:textSize="@dimen/sp_17" />
</RelativeLayout>