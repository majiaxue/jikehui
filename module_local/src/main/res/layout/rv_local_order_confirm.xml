<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_345"
    android:layout_height="@dimen/dp_90">

    <ImageView
        android:id="@+id/rv_local_order_confirm_img"
        android:layout_width="@dimen/dp_90"
        android:layout_height="match_parent"
        android:src="@drawable/img_501" />

    <TextView
        android:id="@+id/rv_local_order_confirm_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_toRightOf="@id/rv_local_order_confirm_img"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="【爆款】招牌麻辣小龙虾-必点约10只..."
        android:textColor="#333333"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:id="@+id/rv_local_order_confirm_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rv_local_order_confirm_title"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp_25"
        android:text="X2"
        android:textColor="#333333"
        android:textSize="@dimen/sp_12" />

    <TextView
        android:id="@+id/rv_local_order_confirm_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:text="￥19.9"
        android:textColor="#fb5318"
        android:textSize="@dimen/sp_18" />
</RelativeLayout>