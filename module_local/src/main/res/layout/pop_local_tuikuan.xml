<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_10_fff_top"
    android:orientation="vertical">

    <TextView
        android:id="@+id/popup_local_tuikuan_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_17"
        android:text="退款原因"
        android:textSize="@dimen/sp_20" />

    <ImageView
        android:id="@+id/popup_local_tuikuan_close"
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginRight="@dimen/dp_5"
        android:padding="@dimen/dp_10"
        android:src="@drawable/icon_guanbi10" />

    <RadioGroup
        android:id="@+id/popup_local_tuikuan_radio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/popup_local_tuikuan_text"
        android:layout_marginTop="@dimen/dp_45"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/popup_local_tuikuan_but1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_15"
            android:button="@null"
            android:drawableRight="@drawable/select_popup"
            android:text="我不想要了"
            android:textColor="#333333"
            android:textSize="@dimen/sp_17" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="#e1e1e1" />

        <RadioButton
            android:id="@+id/popup_local_tuikuan_but2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_15"
            android:button="@null"
            android:drawableRight="@drawable/select_popup"
            android:text="忘记使用红包"
            android:textColor="#333333"
            android:textSize="@dimen/sp_17" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="#e1e1e1" />

        <RadioButton
            android:id="@+id/popup_local_tuikuan_but3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_15"
            android:button="@null"
            android:drawableRight="@drawable/select_popup"
            android:text="点多了/点错了/点漏了"
            android:textColor="#333333"
            android:textSize="@dimen/sp_17" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="#e1e1e1" />

        <RadioButton
            android:id="@+id/popup_local_tuikuan_but4"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_15"
            android:button="@null"
            android:drawableRight="@drawable/select_popup"
            android:text="地址填写错误"
            android:textColor="#333333"
            android:textSize="@dimen/sp_17" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="#e1e1e1" />

        <RadioButton
            android:id="@+id/popup_local_tuikuan_but5"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_15"
            android:button="@null"
            android:drawableRight="@drawable/select_popup"
            android:text="其他原因"
            android:textColor="#333333"
            android:textSize="@dimen/sp_17" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_10"
            android:background="@drawable/bg_border_5_dedede"
            android:hint="请输入原因"
            android:includeFontPadding="false"
            android:paddingLeft="@dimen/dp_5"
            android:textColor="#333333"
            android:textColorHint="#999999"
            android:textCursorDrawable="@drawable/edit_cursor"
            android:textSize="@dimen/sp_16"
            android:visibility="gone" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="#e1e1e1" />
    </RadioGroup>

    <TextView
        android:id="@+id/popup_local_tuikuan_btn"
        android:layout_width="@dimen/dp_345"
        android:layout_height="@dimen/dp_44"
        android:layout_below="@id/popup_local_tuikuan_radio"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_20"
        android:background="@drawable/bg_22_feb_fb4"
        android:gravity="center"
        android:text="确定"
        android:textColor="#ffffff"
        android:textSize="@dimen/sp_18" />

</RelativeLayout>