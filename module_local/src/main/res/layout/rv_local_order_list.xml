<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/dp_345"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_5_fff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_11"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/rv_local_order_list_img"
            android:layout_width="@dimen/dp_22"
            android:layout_height="@dimen/dp_22"
            app:roundBottomLeft="true"
            app:roundBottomRight="true"
            app:roundTopLeft="true"
            app:roundTopRight="true"
            app:roundedCornerRadius="@dimen/dp_2" />

        <TextView
            android:id="@+id/rv_local_order_list_shop_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_13"
            android:drawableRight="@drawable/icon_youjiantou"
            android:ellipsize="end"
            android:includeFontPadding="false"
            android:maxWidth="@dimen/dp_200"
            android:maxLines="1"
            android:textColor="#333333"
            android:textSize="@dimen/sp_14" />

        <View
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_0"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/rv_local_order_list_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_12"
            android:textColor="#999999"
            android:textSize="@dimen/sp_12" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_local_order_list_rv"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_100"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_10"
        android:overScrollMode="never" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_35"
        android:layout_marginBottom="@dimen/dp_15"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/rv_local_order_list_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_17"
            android:includeFontPadding="false"
            android:textColor="#fb5318"
            android:textSize="@dimen/sp_14" />

        <View
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_0"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/rv_local_order_list_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:textColor="#333333"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/rv_local_order_list_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_12"
            android:includeFontPadding="false"
            android:textColor="#fb5318"
            android:textSize="@dimen/sp_18" />


    </LinearLayout>

    <View
        android:id="@+id/rv_local_order_list_temp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="#dedede" />

    <LinearLayout
        android:id="@+id/rv_local_order_list_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_14"
        android:layout_marginBottom="@dimen/dp_13"
        android:orientation="horizontal">

        <View
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_0"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/rv_local_order_list_cancel"
            android:layout_width="@dimen/dp_114"
            android:layout_height="@dimen/dp_32"
            android:background="@drawable/bg_15_b0b0b0"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="取消订单"
            android:textColor="#ffffff"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/rv_local_order_list_confirm"
            android:layout_width="@dimen/dp_114"
            android:layout_height="@dimen/dp_32"
            android:layout_marginLeft="@dimen/dp_9"
            android:layout_marginRight="@dimen/dp_12"
            android:background="@drawable/bg_15_fb5318"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="去付款"
            android:textColor="#ffffff"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>
</LinearLayout>