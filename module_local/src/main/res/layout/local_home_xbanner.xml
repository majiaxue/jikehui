<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/dp_345"
    android:layout_height="@dimen/dp_140"
    android:background="@drawable/bg_10_fff">

    <ImageView
        android:id="@+id/local_home_xbanner_img"
        android:layout_width="@dimen/dp_82"
        android:layout_height="@dimen/dp_82"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_15"
        android:src="@drawable/img_501" />

    <TextView
        android:id="@+id/local_home_xbanner_name"
        android:layout_width="@dimen/dp_150"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_14"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_toRightOf="@id/local_home_xbanner_img"
        android:ellipsize="end"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:text="汤小调美食"
        android:textColor="#333333"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:id="@+id/local_home_xbanner_address"
        android:layout_width="@dimen/dp_175"
        android:layout_height="wrap_content"
        android:layout_below="@id/local_home_xbanner_name"
        android:layout_alignLeft="@id/local_home_xbanner_name"
        android:layout_marginTop="@dimen/dp_7"
        android:ellipsize="end"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:text="郑州市金水区金成国际广场A-01"
        android:textColor="#999999"
        android:textSize="@dimen/sp_12" />

    <LinearLayout
        android:id="@+id/local_home_xbanner_temp1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/local_home_xbanner_address"
        android:layout_alignLeft="@id/local_home_xbanner_name"
        android:layout_marginTop="@dimen/dp_7"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:text="评分"
            android:textColor="#999999"
            android:textSize="@dimen/sp_12" />

        <com.example.view.RatingBarView
            android:id="@+id/local_home_xbanner_rtb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_13"
            app:starCount="5"
            app:starEmpty="@drawable/icon_haopingweixuanzhong"
            app:starFill="@drawable/icon_haopingxingxing"
            app:starImageSize="@dimen/dp_18" />
    </LinearLayout>

    <TextView
        android:id="@+id/local_home_xbanner_coupon1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/local_home_xbanner_temp1"
        android:layout_alignLeft="@id/local_home_xbanner_temp1"
        android:layout_marginTop="@dimen/dp_7"
        android:background="@drawable/bg_5_leftbottom_righttop"
        android:gravity="center"
        android:includeFontPadding="false"
        android:paddingLeft="@dimen/dp_7"
        android:paddingTop="@dimen/dp_3"
        android:paddingRight="@dimen/dp_7"
        android:paddingBottom="@dimen/dp_4"
        android:text="满100减10元"
        android:textColor="#fefefe"
        android:textSize="@dimen/sp_11" />

    <TextView
        android:id="@+id/local_home_xbanner_coupon2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/local_home_xbanner_coupon1"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_toRightOf="@id/local_home_xbanner_coupon1"
        android:background="@drawable/bg_5_leftbottom_righttop"
        android:gravity="center"
        android:includeFontPadding="false"
        android:paddingLeft="@dimen/dp_7"
        android:paddingTop="@dimen/dp_3"
        android:paddingRight="@dimen/dp_7"
        android:paddingBottom="@dimen/dp_4"
        android:text="满200减40元"
        android:textColor="#fefefe"
        android:textSize="@dimen/sp_11" />

    <TextView
        android:id="@+id/local_home_xbanner_type"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_20"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/bg_9_lefttop_leftbottom_fcdede"
        android:gravity="center_vertical"
        android:includeFontPadding="false"
        android:paddingLeft="@dimen/dp_12"
        android:paddingRight="@dimen/dp_15"
        android:text="美食饮品"
        android:textColor="#fb4719"
        android:textSize="@dimen/sp_12" />

    <TextView
        android:id="@+id/local_home_xbanner_space"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/local_home_xbanner_type"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginRight="@dimen/dp_5"
        android:text="0km"
        android:textColor="#999999"
        android:textSize="@dimen/sp_12" />
</RelativeLayout>