<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical">

    <include layout="@layout/page_top" />

    <LinearLayout
        android:layout_width="@dimen/dp_351"
        android:layout_height="@dimen/dp_405"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_14"
        android:background="@drawable/pop_clear_cache"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_48"
            android:orientation="horizontal">

            <View
                android:layout_width="@dimen/dp_3"
                android:layout_height="@dimen/dp_15"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_31"
                android:background="@color/codeText" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_10"
                android:text="支付宝提现"
                android:textColor="@color/codeText"
                android:textSize="@dimen/sp_15" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="#e36013" />

        <EditText
            android:id="@+id/cashout_zfb"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_37"
            android:layout_marginLeft="@dimen/dp_31"
            android:layout_marginTop="@dimen/dp_22"
            android:layout_marginRight="@dimen/dp_35"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请输入支付宝账号"
            android:textColor="#333333"
            android:textColorHint="#999999"
            android:textCursorDrawable="@drawable/edit_cursor"
            android:textSize="@dimen/sp_14" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginLeft="@dimen/dp_31"
            android:layout_marginRight="@dimen/dp_35"
            android:background="#dedede" />

        <EditText
            android:id="@+id/cashout_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_37"
            android:layout_marginLeft="@dimen/dp_31"
            android:layout_marginTop="@dimen/dp_17"
            android:layout_marginRight="@dimen/dp_35"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请输入姓名"
            android:textColor="#333333"
            android:textColorHint="#999999"
            android:textCursorDrawable="@drawable/edit_cursor"
            android:textSize="@dimen/sp_14" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginLeft="@dimen/dp_31"
            android:layout_marginRight="@dimen/dp_35"
            android:background="#dedede" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_31"
            android:layout_marginTop="@dimen/dp_44"
            android:includeFontPadding="false"
            android:text="提现金额"
            android:textColor="#333333"
            android:textSize="@dimen/sp_12" />

        <LinearLayout
            android:layout_width="@dimen/dp_286"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_31"
            android:layout_marginTop="@dimen/dp_22"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="￥"
                android:textColor="#333333"
                android:textSize="@dimen/sp_30" />

            <EditText
                android:id="@+id/cashout_edit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_7"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="手续费收取所提金额的1%"
                android:inputType="numberDecimal"
                android:textColor="#333333"
                android:textColorHint="#999999"
                android:textCursorDrawable="@drawable/edit_cursor"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>

        <View
            android:layout_width="@dimen/dp_286"
            android:layout_height="@dimen/dp_1"
            android:layout_marginLeft="@dimen/dp_31"
            android:background="#dedede" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_31"
            android:layout_marginTop="@dimen/dp_10"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cashout_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="余额¥100.00，"
                android:textColor="#333333"
                android:textSize="@dimen/sp_10" />

            <TextView
                android:id="@+id/cashout_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:paddingRight="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_10"
                android:text="全部提现"
                android:textColor="@color/codeText"
                android:textSize="@dimen/sp_10" />
        </LinearLayout>

        <TextView
            android:id="@+id/cashout_btn"
            android:layout_width="@dimen/dp_288"
            android:layout_height="@dimen/dp_35"
            android:layout_marginLeft="@dimen/dp_31"
            android:layout_marginTop="@dimen/dp_24"
            android:background="@drawable/bg_5_e36013"
            android:gravity="center"
            android:text="提现"
            android:textColor="#ffffff"
            android:textSize="@dimen/sp_16" />
    </LinearLayout>
</LinearLayout>