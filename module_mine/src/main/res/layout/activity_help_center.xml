<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dfgdg"
        android:orientation="vertical">

        <include layout="@layout/include_status" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_241">

            <ImageView
                android:id="@+id/include_back"
                android:layout_width="@dimen/dp_36"
                android:layout_height="@dimen/dp_44"
                android:layout_marginTop="@dimen/dp_3"
                android:padding="@dimen/dp_14"
                android:src="@drawable/icon_fanhui_bai" />

            <TextView
                android:id="@+id/help_center_title"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_50"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="帮助中心"
                android:textColor="#ffffff"
                android:textSize="@dimen/sp_19" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_below="@id/help_center_title"
                android:background="#eeeeee" />

            <TextView
                android:id="@+id/help_center_temp1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/help_center_title"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_27"
                android:text="在线客服"
                android:textColor="#ffffff"
                android:textSize="@dimen/sp_15" />

            <TextView
                android:id="@+id/help_center_temp2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/help_center_temp1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_24"
                android:text="人工服务时间：工作日9：00--18：00"
                android:textColor="#ffffff"
                android:textSize="@dimen/sp_15" />

            <TextView
                android:id="@+id/help_center_call_just"
                android:layout_width="@dimen/dp_100"
                android:layout_height="@dimen/dp_32"
                android:layout_below="@id/help_center_temp2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_21"
                android:background="@drawable/pop_clear_cache"
                android:gravity="center"
                android:text="立即咨询"
                android:textColor="#333333"
                android:textSize="@dimen/sp_15" />
        </RelativeLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="@dimen/dp_348"
        android:layout_height="@dimen/dp_181"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_15"
        android:background="#ffffff"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="@dimen/dp_81"
            android:layout_height="@dimen/dp_181"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/dp_17"
                android:layout_height="@dimen/dp_16"
                android:src="@drawable/bangzhuwenhao2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_11"
                android:text="帮助中心"
                android:textColor="#333333"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>

        <View
            android:layout_width="@dimen/dp_1"
            android:layout_height="match_parent"
            android:background="#eeeeee" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/help_center_txt1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0"
                android:layout_marginLeft="@dimen/dp_13"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="双十一预售商品的问题？"
                android:textColor="#333333"
                android:textSize="@dimen/sp_14" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="#eeeeee" />

            <TextView
                android:id="@+id/help_center_txt2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0"
                android:layout_marginLeft="@dimen/dp_13"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="如遇退货是否按时付金额退回？"
                android:textColor="#333333"
                android:textSize="@dimen/sp_14" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="#eeeeee" />

            <TextView
                android:id="@+id/help_center_txt3"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0"
                android:layout_marginLeft="@dimen/dp_13"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="怎么保证商品的品质呢？"
                android:textColor="#333333"
                android:textSize="@dimen/sp_14" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="#eeeeee" />

            <TextView
                android:id="@+id/help_center_txt4"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0"
                android:layout_marginLeft="@dimen/dp_13"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="如何获得返佣？"
                android:textColor="#333333"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/dp_348"
        android:layout_height="@dimen/dp_58"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_9"
        android:background="#ffffff"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="@dimen/dp_81"
            android:layout_height="@dimen/dp_58"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/dp_17"
                android:layout_height="@dimen/dp_16"
                android:src="@drawable/xinrenbangzhu" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_9"
                android:text="新人帮助"
                android:textColor="#333333"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>

        <View
            android:layout_width="@dimen/dp_1"
            android:layout_height="match_parent"
            android:background="#eeeeee" />

        <TextView
            android:id="@+id/help_center_txt5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_13"
            android:gravity="center_vertical"
            android:text="新人使用指导"
            android:textColor="#333333"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>
</LinearLayout>