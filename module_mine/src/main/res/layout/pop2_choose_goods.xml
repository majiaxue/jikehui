<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_444"
    android:background="@drawable/bg_10_fff_top">

    <ImageView
        android:id="@+id/pop2_choose_goods_img"
        android:layout_width="@dimen/dp_96"
        android:layout_height="@dimen/dp_96"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_20" />

    <ImageView
        android:id="@+id/pop2_choose_goods_cancel"
        android:layout_width="@dimen/dp_46"
        android:layout_height="@dimen/dp_46"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginRight="@dimen/dp_5"
        android:padding="@dimen/dp_10"
        android:src="@drawable/icon_chahao" />

    <TextView
        android:id="@+id/pop2_choose_goods_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_126"
        android:layout_marginTop="@dimen/dp_53"
        android:textColor="@color/codeText"
        android:textSize="@dimen/sp_20" />

    <TextView
        android:id="@+id/pop2_choose_goods_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pop2_choose_goods_price"
        android:layout_alignLeft="@id/pop2_choose_goods_price"
        android:layout_marginTop="@dimen/dp_17"
        android:textColor="#333333"
        android:textSize="@dimen/sp_13" />

    <TextView
        android:id="@+id/pop2_choose_goods_buy"
        android:layout_width="@dimen/dp_345"
        android:layout_height="@dimen/dp_41"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp_24"
        android:background="@drawable/bg_21_dbb_f8d"
        android:gravity="center"
        android:text="立即购买"
        android:textColor="#78482f"
        android:textSize="@dimen/sp_14" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/pop2_choose_goods_buy"
        android:layout_below="@id/pop2_choose_goods_img"
        android:layout_marginTop="@dimen/dp_13"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/pop2_choose_goods_title1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:includeFontPadding="false"
                android:textColor="#333333"
                android:textSize="@dimen/sp_15" />

            <com.example.view.flowLayout.TagFlowLayout
                android:id="@+id/pop2_choose_goods_flow1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_15"
                app:max_select="1"></com.example.view.flowLayout.TagFlowLayout>

            <TextView
                android:id="@+id/pop2_choose_goods_title2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_4"
                android:includeFontPadding="false"
                android:textColor="#333333"
                android:textSize="@dimen/sp_15" />

            <com.example.view.flowLayout.TagFlowLayout
                android:id="@+id/pop2_choose_goods_flow2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_15"
                app:max_select="1"></com.example.view.flowLayout.TagFlowLayout>

            <TextView
                android:id="@+id/pop2_choose_goods_title3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_4"
                android:includeFontPadding="false"
                android:textColor="#333333"
                android:textSize="@dimen/sp_15" />

            <com.example.view.flowLayout.TagFlowLayout
                android:id="@+id/pop2_choose_goods_flow3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_15"
                app:max_select="1"></com.example.view.flowLayout.TagFlowLayout>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</RelativeLayout>