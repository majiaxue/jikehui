<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <include layout="@layout/include_status" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/setting_back"
            android:layout_width="@dimen/dp_36"
            android:layout_height="@dimen/dp_44"
            android:layout_centerVertical="true"
            android:padding="@dimen/dp_14"
            android:src="@drawable/icon_fanhui" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:includeFontPadding="false"
            android:text="@string/setting"
            android:textColor="#333333"
            android:textSize="@dimen/sp_19" />

        <TextView
            android:id="@+id/setting_preserve"
            android:layout_width="@dimen/dp_48"
            android:layout_height="@dimen/dp_34"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_5"
            android:gravity="center"
            android:text="@string/preserve"
            android:textColor="#fc5917"
            android:textSize="@dimen/sp_16" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="#eeeeee" />


    <ImageView
        android:id="@+id/setting_header"
        android:layout_width="@dimen/dp_58"
        android:layout_height="@dimen/dp_58"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_15"
        android:src="@drawable/icon_touxiang1" />

    <TextView
        android:id="@+id/setting_update_header"
        android:layout_width="@dimen/dp_78"
        android:layout_height="@dimen/dp_27"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@drawable/bg_update_header"
        android:gravity="center"
        android:text="@string/update_header"
        android:textColor="#fb4618"
        android:textSize="@dimen/sp_14" />

    <View
        android:layout_width="@dimen/dp_346"
        android:layout_height="@dimen/dp_1"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_29"
        android:background="#eeeeee" />

    <LinearLayout
        android:layout_width="@dimen/dp_346"
        android:layout_height="@dimen/dp_52"
        android:layout_gravity="center_horizontal"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:text="@string/nick_name"
            android:textColor="#333333"
            android:textSize="@dimen/sp_15" />

        <EditText
            android:id="@+id/setting_nick_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:includeFontPadding="false"
            android:text=""
            android:textColor="#999999"
            android:textCursorDrawable="@drawable/edit_cursor"
            android:textSize="@dimen/sp_15" />
    </LinearLayout>

    <View
        android:layout_width="@dimen/dp_346"
        android:layout_height="@dimen/dp_1"
        android:layout_gravity="center_horizontal"
        android:background="#eeeeee" />

    <LinearLayout
        android:layout_width="@dimen/dp_346"
        android:layout_height="@dimen/dp_52"
        android:layout_gravity="center_horizontal"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:text="@string/personality_sign"
            android:textColor="#333333"
            android:textSize="@dimen/sp_15" />

        <EditText
            android:id="@+id/setting_personality_sign"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:includeFontPadding="false"
            android:text=""
            android:textColor="#999999"
            android:textCursorDrawable="@drawable/edit_cursor"
            android:textSize="@dimen/sp_15" />
    </LinearLayout>

    <View
        android:layout_width="@dimen/dp_346"
        android:layout_height="@dimen/dp_1"
        android:layout_gravity="center_horizontal"
        android:background="#eeeeee" />

    <LinearLayout
        android:id="@+id/setting_update_password"
        android:layout_width="@dimen/dp_346"
        android:layout_height="@dimen/dp_52"
        android:layout_gravity="center_horizontal"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:text="@string/update_password"
            android:textColor="#333333"
            android:textSize="@dimen/sp_15" />

        <View
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_0"
            android:layout_weight="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:text="@string/to_update"
            android:textColor="#999999"
            android:textSize="@dimen/sp_15" />

        <ImageView
            android:layout_width="@dimen/dp_7"
            android:layout_height="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_9"
            android:src="@drawable/icon_youjiantou" />
    </LinearLayout>

    <View
        android:layout_width="@dimen/dp_346"
        android:layout_height="@dimen/dp_1"
        android:layout_gravity="center_horizontal"
        android:background="#eeeeee" />

    <LinearLayout
        android:id="@+id/setting_bind_wechat"
        android:layout_width="@dimen/dp_346"
        android:layout_height="@dimen/dp_52"
        android:layout_gravity="center_horizontal"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:text="@string/bind_wechat"
            android:textColor="#333333"
            android:textSize="@dimen/sp_15" />

        <View
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_0"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/setting_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:text="@string/to_bind"
            android:textColor="#999999"
            android:textSize="@dimen/sp_15" />

        <ImageView
            android:layout_width="@dimen/dp_7"
            android:layout_height="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_9"
            android:src="@drawable/icon_youjiantou" />
    </LinearLayout>

    <View
        android:layout_width="@dimen/dp_346"
        android:layout_height="@dimen/dp_1"
        android:layout_gravity="center_horizontal"
        android:background="#eeeeee" />

    <LinearLayout
        android:id="@+id/setting_replace_phone"
        android:layout_width="@dimen/dp_346"
        android:layout_height="@dimen/dp_52"
        android:layout_gravity="center_horizontal"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:text="@string/replace_phonenum"
            android:textColor="#333333"
            android:textSize="@dimen/sp_15" />

        <View
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_0"
            android:layout_weight="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:text="@string/to_replace"
            android:textColor="#999999"
            android:textSize="@dimen/sp_15" />

        <ImageView
            android:layout_width="@dimen/dp_7"
            android:layout_height="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_9"
            android:src="@drawable/icon_youjiantou" />
    </LinearLayout>

    <View
        android:layout_width="@dimen/dp_346"
        android:layout_height="@dimen/dp_1"
        android:layout_gravity="center_horizontal"
        android:background="#eeeeee" />

    <LinearLayout
        android:id="@+id/setting_clear_cache"
        android:layout_width="@dimen/dp_346"
        android:layout_height="@dimen/dp_52"
        android:layout_gravity="center_horizontal"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:text="@string/clear_cache"
            android:textColor="#333333"
            android:textSize="@dimen/sp_15" />

        <View
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_0"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/setting_cache_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:textColor="#999999"
            android:textSize="@dimen/sp_15" />

    </LinearLayout>

    <View
        android:layout_width="@dimen/dp_346"
        android:layout_height="@dimen/dp_1"
        android:layout_gravity="center_horizontal"
        android:background="#eeeeee" />

    <LinearLayout
        android:id="@+id/setting_about_us"
        android:layout_width="@dimen/dp_346"
        android:layout_height="@dimen/dp_52"
        android:layout_gravity="center_horizontal"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:text="@string/about_us"
            android:textColor="#333333"
            android:textSize="@dimen/sp_15" />

    </LinearLayout>

    <View
        android:layout_width="@dimen/dp_346"
        android:layout_height="@dimen/dp_1"
        android:layout_gravity="center_horizontal"
        android:background="#eeeeee" />

    <View
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_0"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/setting_logout"
        android:layout_width="@dimen/dp_347"
        android:layout_height="@dimen/dp_45"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/dp_29"
        android:background="@drawable/bg_btn_login"
        android:gravity="center"
        android:text="@string/logout"
        android:textColor="#ffffff"
        android:textSize="@dimen/sp_18" />

</LinearLayout>