<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/page_top" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="@dimen/dp_348"
            android:layout_height="@dimen/dp_1326"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_13"
            android:layout_marginBottom="@dimen/dp_16"
            android:background="@drawable/gchfhdffwa"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_31"
                android:layout_marginTop="@dimen/dp_506"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/dp_16"
                    android:layout_height="@dimen/dp_16"
                    android:background="@drawable/circle_16_fb4119"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:text="登录注册"
                    android:textColor="#000000"
                    android:textSize="@dimen/sp_15" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:text="(登录成功后，进入首页)"
                    android:textColor="#fb4119"
                    android:textSize="@dimen/sp_12" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_28"
                android:layout_marginTop="@dimen/dp_15"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/newguide_img1"
                    android:layout_width="@dimen/dp_127"
                    android:layout_height="@dimen/dp_159"
                    android:src="@drawable/newguide1" />

                <ImageView
                    android:layout_width="@dimen/dp_135"
                    android:layout_height="@dimen/dp_114"
                    android:layout_gravity="bottom"
                    android:src="@drawable/fghrdgsdg" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_57"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(可在首页直接搜索需要的商品)"
                    android:textColor="#fb4119"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_8"
                    android:text="首页搜索"
                    android:textColor="#000000"
                    android:textSize="@dimen/sp_15" />

                <TextView
                    android:layout_width="@dimen/dp_16"
                    android:layout_height="@dimen/dp_16"
                    android:background="@drawable/circle_16_fb4119"
                    android:gravity="center"
                    android:text="2"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/sp_12" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_47"
                android:layout_marginTop="@dimen/dp_20"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/dp_152"
                    android:layout_height="@dimen/dp_96"
                    android:layout_gravity="bottom"
                    android:src="@drawable/hjdryrsgsfdh" />

                <ImageView
                    android:id="@+id/newguide_img2"
                    android:layout_width="@dimen/dp_127"
                    android:layout_height="@dimen/dp_155"
                    android:src="@drawable/newguide2" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_36"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/dp_16"
                    android:layout_height="@dimen/dp_16"
                    android:background="@drawable/circle_16_fb4119"
                    android:gravity="center"
                    android:text="3"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:layout_marginRight="@dimen/dp_10"
                    android:text="商城购买宝贝"
                    android:textColor="#000000"
                    android:textSize="@dimen/sp_15" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(从商城选择需要购买的宝贝)"
                    android:textColor="#fb4119"
                    android:textSize="@dimen/sp_12" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_19"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/newguide_img3"
                    android:layout_width="@dimen/dp_122"
                    android:layout_height="@dimen/dp_158"
                    android:src="@drawable/newguide3" />

                <ImageView
                    android:layout_width="@dimen/dp_135"
                    android:layout_height="@dimen/dp_114"
                    android:layout_gravity="bottom"
                    android:src="@drawable/ghdfgdfges" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_42"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(点击领券即可领取优惠券购买)"
                    android:textColor="#fb4119"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_8"
                    android:text="领取优惠券"
                    android:textColor="#000000"
                    android:textSize="@dimen/sp_15" />

                <TextView
                    android:layout_width="@dimen/dp_16"
                    android:layout_height="@dimen/dp_16"
                    android:background="@drawable/circle_16_fb4119"
                    android:gravity="center"
                    android:text="4"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/sp_12" />
            </LinearLayout>

            <ImageView
                android:id="@+id/newguide_img4"
                android:layout_width="@dimen/dp_121"
                android:layout_height="@dimen/dp_155"
                android:layout_gravity="right"
                android:layout_marginTop="@dimen/dp_19"
                android:layout_marginRight="@dimen/dp_27"
                android:src="@drawable/newguide4" />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>