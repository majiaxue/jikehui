<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/page_top" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.stx.xhb.xbanner.XBanner
                android:id="@+id/buy2up_banner"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_250" />

            <TextView
                android:id="@+id/buy2up_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_17"
                android:layout_marginTop="@dimen/dp_14"
                android:layout_marginRight="@dimen/dp_17"
                android:includeFontPadding="false"
                android:lineHeight="@dimen/dp_21"
                android:text="女士爽肤纯露水加精油不添加防腐剂放心试用护肤品隔离紫外线"
                android:textColor="#333333"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:id="@+id/buy2up_quanyi"
                android:layout_width="@dimen/dp_345"
                android:layout_height="@dimen/dp_41"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_21"
                android:background="@drawable/bg_21_dbb_f8d"
                android:gravity="center"
                android:text="请选择城市"
                android:textColor="#78482f"
                android:textSize="@dimen/sp_14" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_33"
                android:layout_marginRight="@dimen/dp_15"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <View
                    android:layout_width="@dimen/dp_136"
                    android:layout_height="@dimen/dp_1"
                    android:background="#dedede" />

                <View
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="@dimen/dp_0"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="商品详情"
                    android:textColor="#999999"
                    android:textSize="@dimen/sp_14" />

                <View
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="@dimen/dp_0"
                    android:layout_weight="1" />

                <View
                    android:layout_width="@dimen/dp_136"
                    android:layout_height="@dimen/dp_1"
                    android:background="#dedede" />
            </LinearLayout>

            <WebView
                android:id="@+id/buy2up_webview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <TextView
        android:id="@+id/buy2up_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:background="@drawable/bg_dbb_f7d"
        android:gravity="center"
        android:text="立即购买"
        android:textColor="#78482f"
        android:textSize="@dimen/sp_16" />
</LinearLayout>