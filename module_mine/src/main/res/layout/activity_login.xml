<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_485"
            android:background="@drawable/login" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_31"
                android:layout_marginTop="@dimen/dp_280"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/login_login_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="登录"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_21" />

                <TextView
                    android:id="@+id/login_reg_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_30"
                    android:includeFontPadding="false"
                    android:text="注册"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_15" />
            </LinearLayout>


            <EditText
                android:id="@+id/login_name"
                android:layout_width="@dimen/dp_295"
                android:layout_height="@dimen/dp_50"
                android:layout_marginLeft="@dimen/dp_32"
                android:layout_marginTop="@dimen/dp_7"
                android:background="@null"
                android:drawableLeft="@drawable/tkzc_icon_1"
                android:drawablePadding="@dimen/dp_17"
                android:hint="@string/input_phone"
                android:inputType="number"
                android:textColor="#333333"
                android:textColorHint="#666666"
                android:textCursorDrawable="@drawable/edit_cursor"
                android:textSize="@dimen/sp_16" />


            <View
                android:layout_width="@dimen/dp_295"
                android:layout_height="@dimen/dp_1"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_32"
                android:background="#eaeaea" />

            <RelativeLayout
                android:id="@+id/login_visi_login1"
                android:layout_width="@dimen/dp_295"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_32"
                android:visibility="gone">

                <EditText
                    android:id="@+id/login_code"
                    android:layout_width="@dimen/dp_295"
                    android:layout_height="@dimen/dp_50"
                    android:background="@null"
                    android:drawableLeft="@drawable/tkzc_phone"
                    android:drawablePadding="@dimen/dp_17"
                    android:hint="请输入验证码"
                    android:inputType="textPassword"
                    android:textColor="#333333"
                    android:textColorHint="#666666"
                    android:textCursorDrawable="@drawable/edit_cursor"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/register_get_code"
                    android:layout_width="@dimen/dp_70"
                    android:layout_height="@dimen/dp_27"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/bg_get_code"
                    android:gravity="center"
                    android:text="@string/get_code"
                    android:textColor="#fb4119"
                    android:textSize="@dimen/sp_11" />
            </RelativeLayout>

            <View
                android:id="@+id/login_visi_login2"
                android:layout_width="@dimen/dp_295"
                android:layout_height="@dimen/dp_1"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_32"
                android:background="#eaeaea"
                android:visibility="gone" />

            <EditText
                android:id="@+id/login_invite_code"
                android:layout_width="@dimen/dp_295"
                android:layout_height="@dimen/dp_50"
                android:layout_marginLeft="@dimen/dp_32"
                android:background="@null"
                android:drawableLeft="@drawable/tkzc_icon_3"
                android:drawablePadding="@dimen/dp_17"
                android:hint="邀请码（非必填）"
                android:inputType="textPassword"
                android:textColor="#333333"
                android:textColorHint="#666666"
                android:textCursorDrawable="@drawable/edit_cursor"
                android:textSize="@dimen/sp_14"
                android:visibility="gone" />

            <View
                android:id="@+id/login_visi_login3"
                android:layout_width="@dimen/dp_295"
                android:layout_height="@dimen/dp_1"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_32"
                android:background="#eaeaea"
                android:visibility="gone" />

            <EditText
                android:id="@+id/login_password"
                android:layout_width="@dimen/dp_295"
                android:layout_height="@dimen/dp_50"
                android:layout_marginLeft="@dimen/dp_32"
                android:background="@null"
                android:drawableLeft="@drawable/tkzc_suo"
                android:drawablePadding="@dimen/dp_17"
                android:hint="@string/input_password"
                android:inputType="textPassword"
                android:textColor="#333333"
                android:textColorHint="#666666"
                android:textCursorDrawable="@drawable/edit_cursor"
                android:textSize="@dimen/sp_14" />

            <View
                android:layout_width="@dimen/dp_295"
                android:layout_height="@dimen/dp_1"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_32"
                android:layout_marginBottom="@dimen/dp_13"
                android:background="#eaeaea" />

            <LinearLayout
                android:id="@+id/login_visi_register1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_35"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/login_forget"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="忘记密码？"
                    android:textColor="#f18b21"
                    android:textSize="@dimen/sp_14" />

                <View
                    android:layout_width="@dimen/dp_0_5"
                    android:layout_height="@dimen/dp_10"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:background="#999999" />

                <TextView
                    android:id="@+id/login_confirmLogin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="@string/confirm_login"
                    android:textColor="#666666"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/login_visi_login4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_32"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/login_read_check"
                    android:layout_width="@dimen/dp_13"
                    android:layout_height="@dimen/dp_13"
                    android:src="@drawable/xuanzhong" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_13"
                    android:includeFontPadding="false"
                    android:text="已阅读并同意"
                    android:textColor="#666666"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/login_user_agreement"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="《用户协议》"
                    android:textColor="#fb4119"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>

            <View
                android:id="@+id/login_visi_register2"
                android:layout_width="@dimen/dp_0"
                android:layout_height="@dimen/dp_102" />

            <ImageView
                android:id="@+id/login_btn_login"
                android:layout_width="@dimen/dp_70"
                android:layout_height="@dimen/dp_70"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/dp_20"
                android:src="@drawable/xaiyibu" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_39"
                android:layout_marginBottom="@dimen/dp_13"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="@dimen/dp_64"
                        android:layout_height="@dimen/dp_1"
                        android:background="#f18b21" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginRight="@dimen/dp_15"
                        android:text="其他方式登录"
                        android:textColor="#f18b21"
                        android:textSize="@dimen/sp_15" />

                    <View
                        android:layout_width="@dimen/dp_64"
                        android:layout_height="@dimen/dp_1"
                        android:background="#f18b21" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/login_weixin"
                    android:layout_width="@dimen/dp_43"
                    android:layout_height="@dimen/dp_44"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp_10"
                    android:src="@drawable/icon_weixin" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</android.support.v4.widget.NestedScrollView>