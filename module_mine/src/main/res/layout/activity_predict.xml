<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <include layout="@layout/include_status" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45">

        <ImageView
            android:id="@+id/predict_back"
            android:layout_width="@dimen/dp_36"
            android:layout_height="@dimen/dp_44"
            android:padding="@dimen/dp_14"
            android:src="@drawable/icon_fanhui" />

        <LinearLayout
            android:layout_width="@dimen/dp_250"
            android:layout_height="@dimen/dp_30"
            android:layout_centerInParent="true"
            android:background="@drawable/bg_15_dedede"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/predict_tb"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/predict_xuan_left"
                android:button="@null"
                android:gravity="center"
                android:text="@string/taobao"
                android:textColor="#ffffff"
                android:textSize="@dimen/sp_14" />

            <View
                android:layout_width="@dimen/dp_1"
                android:layout_height="match_parent"
                android:background="#dedede" />

            <TextView
                android:id="@+id/predict_pdd"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:text="@string/pinduoduo"
                android:textColor="#222222"
                android:textSize="@dimen/sp_14" />

            <View
                android:layout_width="@dimen/dp_1"
                android:layout_height="match_parent"
                android:background="#dedede" />

            <TextView
                android:id="@+id/predict_jd"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:text="@string/jingdong"
                android:textColor="#222222"
                android:textSize="@dimen/sp_14" />

            <View
                android:layout_width="@dimen/dp_1"
                android:layout_height="match_parent"
                android:background="#dedede"
                android:visibility="gone" />

            <TextView
                android:id="@+id/predict_sc"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:text="@string/shangcheng"
                android:textColor="#222222"
                android:textSize="@dimen/sp_14"
                android:visibility="gone" />
        </LinearLayout>
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/predict_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f5f5f5"></FrameLayout>
</LinearLayout>