<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_348"
    android:layout_height="@dimen/dp_165"
    android:background="@drawable/bg_10_fff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_12"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/order_list_my_head"
            android:layout_width="@dimen/dp_17"
            android:layout_height="@dimen/dp_17"
            android:src="@drawable/icon_tb" />

        <TextView
            android:id="@+id/order_list_my_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_7"
            android:includeFontPadding="false"
            android:textColor="#333333"
            android:textSize="@dimen/sp_14" />

        <ImageView
            android:layout_width="@dimen/dp_5"
            android:layout_height="@dimen/dp_9"
            android:layout_marginLeft="@dimen/dp_9" />
    </LinearLayout>

    <TextView
        android:id="@+id/order_list_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp_13"
        android:layout_marginRight="@dimen/dp_10"
        android:includeFontPadding="false"
        android:textColor="#fc5917"
        android:textSize="@dimen/sp_12" />

    <ImageView
        android:id="@+id/order_list_img"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_60"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_39" />

    <TextView
        android:id="@+id/order_list_name"
        android:layout_width="@dimen/dp_181"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_90"
        android:layout_marginTop="@dimen/dp_39"
        android:ellipsize="end"
        android:includeFontPadding="false"
        android:lineHeight="@dimen/dp_17"
        android:maxLines="2"
        android:textColor="#333333"
        android:textSize="@dimen/sp_12" />

    <TextView
        android:id="@+id/order_list_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp_41"
        android:layout_marginRight="@dimen/dp_10"
        android:includeFontPadding="false"
        android:textColor="#333333"
        android:textSize="@dimen/sp_12" />

    <TextView
        android:id="@+id/order_list_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp_58"
        android:layout_marginRight="@dimen/dp_10"
        android:includeFontPadding="false"
        android:textColor="#999999"
        android:textSize="@dimen/sp_12" />

    <TextView
        android:id="@+id/order_list_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp_96"
        android:layout_marginRight="@dimen/dp_10"
        android:textColor="#333333"
        android:textSize="@dimen/sp_12" />

    <TextView
        android:id="@+id/order_list_predict"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_19"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_11"
        android:background="@drawable/bg_9_fb5_fea"
        android:gravity="center"
        android:paddingLeft="@dimen/dp_11"
        android:paddingRight="@dimen/dp_11"
        android:textColor="#ffffff"
        android:textSize="@dimen/sp_10" />
</RelativeLayout>