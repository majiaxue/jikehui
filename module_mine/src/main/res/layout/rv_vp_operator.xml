<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/rv_vp_operator_img"
        android:layout_width="@dimen/dp_39"
        android:layout_height="@dimen/dp_39"
        android:src="@drawable/icon_quanyi1" />

    <TextView
        android:id="@+id/rv_vp_operator_txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:includeFontPadding="false"
        android:text="金牌会员"
        android:textColor="#fef1c6"
        android:textSize="@dimen/sp_11" />

    <TextView
        android:id="@+id/rv_vp_operator_txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:includeFontPadding="false"
        android:text="所有权益"
        android:textColor="#ffdf76"
        android:textSize="@dimen/sp_12" />
</LinearLayout>