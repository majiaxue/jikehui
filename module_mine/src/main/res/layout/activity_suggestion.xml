<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical">

    <include layout="@layout/page_top" />

    <RelativeLayout
        android:layout_width="@dimen/dp_345"
        android:layout_height="@dimen/dp_224"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_16">

        <EditText
            android:id="@+id/suggestion_edit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/edit_5_fff_border"
            android:gravity="start"
            android:hint="请输入您的反馈内容"
            android:lineHeight="@dimen/dp_30"
            android:paddingLeft="@dimen/dp_13"
            android:paddingTop="@dimen/dp_16"
            android:paddingBottom="@dimen/dp_30"
            android:textColor="#333333"
            android:textColorHint="#aaaaaa"
            android:textCursorDrawable="@drawable/edit_cursor"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/suggestion_nums"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_15"
            android:text="0/300"
            android:textColor="#aaaaaa"
            android:textSize="@dimen/sp_11" />
    </RelativeLayout>

    <View
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_0"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/suggestion_btn"
        android:layout_width="@dimen/dp_347"
        android:layout_height="@dimen/dp_45"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/dp_26"
        android:background="@drawable/bg_22_999"
        android:gravity="center"
        android:text="确定"
        android:textColor="#ffffff"
        android:textSize="@dimen/sp_16" />
</LinearLayout>