<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical">

    <include layout="@layout/page_top" />

    <RelativeLayout
        android:id="@+id/up_order_rela"
        android:layout_width="@dimen/dp_362"
        android:layout_height="@dimen/dp_104"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_8"
        android:background="@drawable/background_dizhi">

        <TextView
            android:id="@+id/up_order_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_22"
            android:includeFontPadding="false"
            android:textColor="#333333"
            android:textSize="@dimen/sp_15" />

        <TextView
            android:id="@+id/up_order_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/up_order_name"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toRightOf="@id/up_order_name"
            android:includeFontPadding="false"
            android:textColor="#333333"
            android:textSize="@dimen/sp_15" />

        <TextView
            android:id="@+id/up_order_address_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/up_order_name"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_29"
            android:includeFontPadding="false"
            android:textColor="#333333"
            android:textSize="@dimen/sp_14" />

        <ImageView
            android:layout_width="@dimen/dp_8"
            android:layout_height="@dimen/dp_16"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_18"
            android:src="@drawable/icon_gengduo2" />

        <TextView
            android:id="@+id/up_order_choose_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_20"
            android:includeFontPadding="false"
            android:text="请选择收货地址"
            android:textColor="#333333"
            android:textSize="@dimen/sp_15"
            android:visibility="gone" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="@dimen/dp_351"
        android:layout_height="@dimen/dp_118"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_9"
        android:background="@drawable/bg_10_fff">

        <ImageView
            android:id="@+id/up_order_img"
            android:layout_width="@dimen/dp_82"
            android:layout_height="@dimen/dp_82"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_13"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/up_order_goods_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/up_order_img"
            android:layout_marginLeft="@dimen/dp_13"
            android:layout_marginRight="@dimen/dp_28"
            android:layout_toRightOf="@id/up_order_img"
            android:ellipsize="end"
            android:includeFontPadding="false"
            android:maxLines="2"
            android:textColor="#333333"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:id="@+id/up_order_attr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/up_order_goods_name"
            android:layout_alignLeft="@id/up_order_goods_name"
            android:layout_marginTop="@dimen/dp_8"
            android:background="@drawable/bg_5_f5f5f5"
            android:includeFontPadding="false"
            android:padding="@dimen/dp_4"
            android:text="颜色：白色，尺码：XL"
            android:textColor="#999999"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/up_order_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/up_order_goods_name"
            android:layout_alignBottom="@id/up_order_img"
            android:text="￥15"
            android:textColor="@color/codeText"
            android:textSize="@dimen/sp_15" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/up_order_img"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_30"
            android:text="X1"
            android:textColor="#666666"
            android:textSize="@dimen/sp_12" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_16"
        android:text="支付方式"
        android:textColor="#333333"
        android:textSize="@dimen/sp_15" />

    <LinearLayout
        android:layout_width="@dimen/dp_351"
        android:layout_height="@dimen/dp_80"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_12"
        android:background="@drawable/bg_10_fff"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/up_order_wx"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_25"
                android:src="@drawable/icon_weixin2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_16"
                android:text="微信支付"
                android:textColor="#333333"
                android:textSize="@dimen/sp_14" />

            <View
                android:layout_width="@dimen/dp_0"
                android:layout_height="@dimen/dp_0"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/up_order_wx_img"
                android:layout_width="@dimen/dp_17"
                android:layout_height="@dimen/dp_17"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/dp_27"
                android:src="@drawable/icon_xuanzhong" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/up_order_zfb"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_25"
                android:src="@drawable/icon_zhifubao" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_16"
                android:text="支付宝支付"
                android:textColor="#333333"
                android:textSize="@dimen/sp_14" />

            <View
                android:layout_width="@dimen/dp_0"
                android:layout_height="@dimen/dp_0"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/up_order_zfb_img"
                android:layout_width="@dimen/dp_17"
                android:layout_height="@dimen/dp_17"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/dp_27"
                android:src="@drawable/icon_weixuanzhong" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_0"
        android:layout_weight="1" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_47"
        android:background="#ffffff">

        <TextView
            android:id="@+id/up_order_temp1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:text="合计："
            android:textColor="#666666"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/up_order_temp2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/up_order_temp1"
            android:layout_toRightOf="@id/up_order_temp1"
            android:text="￥"
            android:textColor="@color/codeText"
            android:textSize="@dimen/sp_11" />

        <TextView
            android:id="@+id/up_order_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/up_order_temp1"
            android:layout_toRightOf="@id/up_order_temp2"
            android:text="100"
            android:textColor="@color/codeText"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/up_order_btn"
            android:layout_width="@dimen/dp_127"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="#dbb393"
            android:gravity="center"
            android:text="提交订单"
            android:textColor="#333333"
            android:textSize="@dimen/sp_16" />
    </RelativeLayout>
</LinearLayout>