<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_345"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_10_fff"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rv_upgrade_rela"
        android:layout_width="@dimen/dp_323"
        android:layout_height="@dimen/dp_166"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_12"
        android:background="@drawable/tongpaihuiyuan">

        <TextView
            android:id="@+id/rv_upgrade_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_18"
            android:layout_marginTop="@dimen/dp_26"
            android:includeFontPadding="false"
            android:text="铜牌会员"
            android:textColor="#ffffff"
            android:textSize="@dimen/sp_28" />

        <TextView
            android:layout_width="@dimen/dp_76"
            android:layout_height="@dimen/dp_22"
            android:layout_marginLeft="@dimen/dp_22"
            android:layout_marginTop="@dimen/dp_68"
            android:background="@drawable/bg_11_af928b"
            android:gravity="center"
            android:text="VIP等级"
            android:textColor="#d2d2d2"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/rv_upgrade_description"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_30"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/dp_18"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:text="查看项目收益 >>"
            android:textColor="#ffffff"
            android:textSize="@dimen/sp_12" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginRight="@dimen/dp_13"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:text="会员升级条件"
            android:textColor="#000000"
            android:textSize="@dimen/sp_13" />

        <View
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_0"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/rv_upgrade_btn"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_26"
            android:background="@drawable/bg_btn_upgrade"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="@string/upgrade_just"
            android:textColor="#ffffff"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/rv_upgrade_factor1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginRight="@dimen/dp_15"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="条件一："
            android:textColor="#333333"
            android:textSize="@dimen/sp_13" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_upgrade_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:overScrollMode="never" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/rv_upgrade_factor2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginRight="@dimen/dp_13"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/rv_upgrade_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="条件二："
            android:textColor="#333333"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:id="@+id/rv_upgrade_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100元"
            android:textColor="#333333"
            android:textSize="@dimen/sp_12" />

        <View
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_0"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/rv_upgrade_topay"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_26"
            android:background="@drawable/bg_btn_upgrade"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="立即支付"
            android:textColor="#ffffff"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:text="备注：上述条件满足任意一条即可升级"
        android:textColor="#999999"
        android:textSize="@dimen/sp_12" />
</LinearLayout>