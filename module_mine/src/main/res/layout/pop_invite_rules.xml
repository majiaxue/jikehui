<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_272"
    android:layout_height="@dimen/dp_400"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_333"
        android:background="@drawable/bg_guizetanchuang"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_32"
            android:text="邀请规则"
            android:textColor="#fc3c15"
            android:textSize="@dimen/sp_24" />

        <TextView
            android:layout_width="@dimen/dp_61"
            android:layout_height="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_26"
            android:layout_marginTop="@dimen/dp_25"
            android:background="@drawable/bg_10_fb4_feb"
            android:gravity="center"
            android:text="规则明细"
            android:textColor="#ffffff"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_29"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_20"
            android:text="1、转发邀请海报，好友下载APP注册时填写海报上的邀请码；"
            android:textColor="#333333"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_29"
            android:layout_marginTop="@dimen/dp_9"
            android:layout_marginRight="@dimen/dp_20"
            android:text="2、分享邀请码链接给好友下载APP注册并使用链接后面的邀请码"
            android:textColor="#333333"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_29"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:text="注：好友下载APP并使用您的邀请码成功注册会员，Ta将永久成为您的粉丝，未来Ta通过推广商品产生的订单佣金您都有奖励，会自动计入您的账户中"
            android:textColor="#fc5d17"
            android:textSize="@dimen/sp_10" />
    </LinearLayout>

    <ImageView
        android:id="@+id/pop_invite_rules_cancel"
        android:layout_width="@dimen/dp_35"
        android:layout_height="@dimen/dp_35"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_31"
        android:src="@drawable/icon_guanbi" />
</LinearLayout>