<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_15"
    android:layout_marginTop="@dimen/dp_10"
    android:layout_marginRight="@dimen/dp_15"
    android:background="@drawable/bg_10_fff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_12"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/dp_13"
            android:layout_height="@dimen/dp_13"
            android:src="@drawable/icon_dianpu15" />

        <TextView
            android:id="@+id/mine_order_parent_shop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_7"
            android:includeFontPadding="false"
            android:paddingTop="@dimen/dp_7"
            android:paddingBottom="@dimen/dp_7"
            android:text="维纳斯旗舰店"
            android:textColor="#333333"
            android:textSize="@dimen/sp_14" />

        <ImageView
            android:layout_width="@dimen/dp_5"
            android:layout_height="@dimen/dp_9"
            android:layout_marginLeft="@dimen/dp_9"
            android:src="@drawable/icon_youjiantou" />

        <View
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_1"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/mine_order_parent_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_10"
            android:includeFontPadding="false"
            android:text="买家已付款"
            android:textColor="#fc5917"
            android:textSize="@dimen/sp_12" />
    </LinearLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/mine_order_parent_child_rec"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"></android.support.v7.widget.RecyclerView>

    <TextView
        android:id="@+id/mine_order_parent_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/dp_10"
        android:text="共2件商品  合计：￥163.0"
        android:textColor="#333333"
        android:textSize="@dimen/sp_12" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/mine_order_parent_btn_left"
            android:layout_width="@dimen/dp_70"
            android:layout_height="@dimen/dp_25"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:background="@drawable/bg_get_code_clicked"
            android:gravity="center"
            android:text="申请退款"
            android:textColor="#333333"
            android:textSize="@dimen/sp_11" />

        <TextView
            android:id="@+id/mine_order_parent_btn_right"
            android:layout_width="@dimen/dp_70"
            android:layout_height="@dimen/dp_25"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:background="@drawable/bg_get_code"
            android:layout_marginLeft="@dimen/dp_11"
            android:gravity="center"
            android:text="提醒发货"
            android:textColor="#fc5917"
            android:textSize="@dimen/sp_11"/>

    </LinearLayout>


</LinearLayout>