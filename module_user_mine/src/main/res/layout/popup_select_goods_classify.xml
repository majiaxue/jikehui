<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorTransparency"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_10_fff_top"
        android:orientation="vertical">

        <TextView
            android:id="@+id/popup_select_goods_classify_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_17"
            android:text="选择商品分类"
            android:textSize="@dimen/sp_20" />

        <ImageView
            android:id="@+id/popup_select_goods_classify_close"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_5"
            android:padding="@dimen/dp_10"
            android:src="@drawable/icon_guanbi10" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/popup_select_goods_classify_rec"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_300"
            android:layout_below="@id/popup_select_goods_classify_text"
            android:layout_marginTop="@dimen/dp_45"
            android:layout_marginBottom="@dimen/dp_20"
            android:overScrollMode="never" />

        <TextView
            android:id="@+id/popup_select_goods_classify_affirm"
            android:layout_width="@dimen/dp_345"
            android:layout_height="@dimen/dp_45"
            android:layout_below="@id/popup_select_goods_classify_rec"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/dp_20"
            android:background="@drawable/bg_22_jianbian"
            android:gravity="center"
            android:text="确定选择"
            android:textColor="#FFF"
            android:textSize="@dimen/sp_18" />

    </RelativeLayout>

</LinearLayout>