<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_12"
    android:layout_marginTop="@dimen/dp_5"
    android:layout_marginRight="@dimen/dp_12"
    android:layout_marginBottom="@dimen/dp_5"
    android:background="@drawable/bg_rec5"
    android:elevation="@dimen/dp_3"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_19"
        android:layout_marginTop="@dimen/dp_14"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/shipping_address_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="付韶"
            android:textColor="#333333"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/shipping_address_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_36"
            android:text="188 1880 1880"
            android:textColor="#333333"
            android:textSize="@dimen/sp_14" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_19"
        android:layout_marginTop="@dimen/dp_11"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/dp_8"
            android:layout_height="@dimen/dp_12"
            android:src="@drawable/icon_dizhi5"
            android:layout_marginTop="@dimen/dp_3"/>

        <TextView
            android:id="@+id/shipping_address_biaoqian"
            android:layout_width="@dimen/dp_41"
            android:layout_height="@dimen/dp_16"
            android:layout_marginLeft="@dimen/dp_10"
            android:background="@drawable/button_biaoqian"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="公司"
            android:textColor="#999999"
            android:textSize="@dimen/sp_12"/>

        <TextView
            android:id="@+id/shipping_address_site"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_11"
            android:ellipsize="end"
            android:lines="2"
            android:text="河南省郑州市金水区金成国际广场3号楼204室"
            android:textColor="#333333"
            android:textSize="@dimen/sp_14" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_33"
        android:layout_marginBottom="@dimen/dp_19"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/shipping_address_check"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:padding="@dimen/dp_5"
            android:src="@drawable/icon_weixuanzhong20" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_5"
            android:text="设为默认地址"
            android:textColor="#333333"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/shipping_address_amend"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_25"
            android:layout_marginLeft="@dimen/dp_84"
            android:background="@drawable/bg_5_hong_bian"
            android:gravity="center"
            android:text="修改"
            android:textColor="#fd3c15"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/shipping_address_delete"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_25"
            android:layout_marginLeft="@dimen/dp_16"
            android:background="@drawable/bg_5_hong_bian"
            android:gravity="center"
            android:text="删除"
            android:textColor="#fd3c15"
            android:textSize="@dimen/sp_14" />

    </LinearLayout>

</LinearLayout>