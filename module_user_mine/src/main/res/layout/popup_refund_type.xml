<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorTransparency"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_268"
        android:background="@drawable/bg_10_fff_top"
        android:orientation="vertical">

        <TextView
            android:id="@+id/popup_refund_type_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_17"
            android:text="退款类型"
            android:textSize="@dimen/sp_20" />

        <ImageView
            android:id="@+id/popup_refund_type_close"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_5"
            android:padding="@dimen/dp_10"
            android:src="@drawable/icon_guanbi10" />

        <RadioGroup
            android:id="@+id/popup_refund_type_radio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/popup_refund_type_text"
            android:layout_marginTop="@dimen/dp_45"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/popup_refund_type_but1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginRight="@dimen/dp_15"
                android:button="@null"
                android:drawableRight="@drawable/select_popup"
                android:text="退货退款"
                android:textColor="#333333"
                android:textSize="@dimen/sp_17" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="#e1e1e1" />

            <RadioButton
                android:id="@+id/popup_refund_type_but2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginRight="@dimen/dp_15"
                android:button="@null"
                android:drawableRight="@drawable/select_popup"
                android:text="未收货"
                android:textColor="#333333"
                android:textSize="@dimen/sp_17" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="#e1e1e1" />

            <RadioButton
                android:id="@+id/popup_refund_type_but3"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginRight="@dimen/dp_15"
                android:button="@null"
                android:drawableRight="@drawable/select_popup"
                android:text="只退款"
                android:textColor="#333333"
                android:textSize="@dimen/sp_17" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="#e1e1e1" />

        </RadioGroup>

    </RelativeLayout>

</LinearLayout>