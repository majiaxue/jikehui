<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.businessapplication.BusinessApplicationActivity">

    <include layout="@layout/page_top" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:background="#FFFFFF"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/business_application_icon"
                android:layout_width="@dimen/dp_86"
                android:layout_height="@dimen/dp_86"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_15"
                app:placeholderImage="@drawable/icon_logo"
                app:placeholderImageScaleType="fitCenter"
                app:roundAsCircle="true" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="店铺名称："
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_14" />

                <EditText
                    android:id="@+id/business_application_shop_name"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_30"
                    android:background="@null"
                    android:gravity="right|center_vertical"
                    android:hint="请输入店铺名称"
                    android:textColorHint="#999999"
                    android:textCursorDrawable="@drawable/edit_cursor"
                    android:textSize="@dimen/sp_12" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="#f3f3f3"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/business_application_shop_type"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="商家类型："
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/business_application_shop_type_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_10"
                    android:text="点击选择"
                    android:textColor="#999999"
                    android:textSize="@dimen/sp_12" />

                <ImageView
                    android:layout_width="@dimen/dp_7"
                    android:layout_height="@dimen/dp_12"
                    android:src="@drawable/right_back" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="#f3f3f3" />

            <LinearLayout
                android:id="@+id/business_application_shop_classify"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="商品分类："
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/business_application_shop_classify_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_10"
                    android:text="点击选择"
                    android:textColor="#999999"
                    android:textSize="@dimen/sp_12" />

                <ImageView
                    android:layout_width="@dimen/dp_7"
                    android:layout_height="@dimen/dp_12"
                    android:src="@drawable/right_back" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="#f3f3f3" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="姓名："
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_14" />

                <EditText
                    android:id="@+id/business_application_name"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_30"
                    android:background="@null"
                    android:gravity="right|center_vertical"
                    android:hint="请输入姓名"
                    android:textColorHint="#999999"
                    android:textCursorDrawable="@drawable/edit_cursor"
                    android:textSize="@dimen/sp_12" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="#f3f3f3" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="联系方式："
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_14" />

                <EditText
                    android:id="@+id/business_application_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_30"
                    android:background="@null"
                    android:digits="1234567890"
                    android:gravity="right|center_vertical"
                    android:hint="请输入联系方式"
                    android:inputType="phone"
                    android:maxLength="11"
                    android:maxLines="1"
                    android:textColorHint="#999999"
                    android:textCursorDrawable="@drawable/edit_cursor"
                    android:textSize="@dimen/sp_12" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="#f3f3f3" />

            <LinearLayout
                android:id="@+id/business_application_shop_address"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="商家地址："
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/business_application_address_province"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="点击选择"
                    android:textColor="#999999"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:id="@+id/business_application_address_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#999999"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:id="@+id/business_application_address_area"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_10"
                    android:text=""
                    android:textColor="#999999"
                    android:textSize="@dimen/sp_12" />

                <ImageView
                    android:layout_width="@dimen/dp_7"
                    android:layout_height="@dimen/dp_12"
                    android:src="@drawable/right_back" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="#f3f3f3" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15"
                    android:text="详细地址："
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_14" />

                <EditText
                    android:id="@+id/business_application_detail_address"
                    android:layout_width="@dimen/dp_328"
                    android:layout_height="@dimen/dp_88"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dp_9"
                    android:background="@drawable/bg_5_f5f5f5"
                    android:gravity="top"
                    android:hint="街道、楼牌号等"
                    android:padding="@dimen/dp_10"
                    android:textColorHint="#999999"
                    android:textCursorDrawable="@drawable/edit_cursor"
                    android:textSize="@dimen/sp_12" />

            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:text="请上传身份证正反面照片"
                android:textColor="#333333"
                android:textSize="@dimen/sp_14" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/business_application_front_photo"
                        android:layout_width="@dimen/dp_160"
                        android:layout_height="@dimen/dp_105"
                        app:placeholderImage="@drawable/icon_shenfenzheng"
                        app:placeholderImageScaleType="fitCenter"
                        app:roundedCornerRadius="@dimen/dp_5" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="点击上传正面照"
                        android:textColor="#999999"
                        android:textSize="@dimen/sp_12" />
                </LinearLayout>

                <View
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:gravity="center"
                    android:orientation="vertical">

                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/business_application_verso_photo"
                        android:layout_width="@dimen/dp_160"
                        android:layout_height="@dimen/dp_105"
                        app:placeholderImage="@drawable/icon_shenfenfan"
                        app:placeholderImageScaleType="fitCenter"
                        app:roundedCornerRadius="@dimen/dp_5" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="点击上传反面照"
                        android:textColor="#999999"
                        android:textSize="@dimen/sp_12" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/business_application_business_license"
                        android:layout_width="@dimen/dp_160"
                        android:layout_height="@dimen/dp_105"
                        app:placeholderImage="@drawable/icon_yingyezhizhao"
                        app:placeholderImageScaleType="fitCenter"
                        app:roundedCornerRadius="@dimen/dp_5" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="点击上传营业执照"
                        android:textColor="#999999"
                        android:textSize="@dimen/sp_12" />
                </LinearLayout>

                <View
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:gravity="center"
                    android:orientation="vertical">

                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/business_application_food_safety_permit"
                        android:layout_width="@dimen/dp_160"
                        android:layout_height="@dimen/dp_105"
                        app:placeholderImage="@drawable/icon_shipianquan"
                        app:placeholderImageScaleType="fitCenter"
                        app:roundedCornerRadius="@dimen/dp_5" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="点击上传食品安全许可证(选填)"
                        android:textColor="#999999"
                        android:textSize="@dimen/sp_12" />
                </LinearLayout>

            </LinearLayout>


            <TextView
                android:id="@+id/business_application_submit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:layout_marginTop="@dimen/dp_56"
                android:background="@drawable/bg_jianbian_text"
                android:gravity="center"
                android:text="提交申请"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/dp_18" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_23"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="已阅读并同意"
                    android:textColor="#9e9e9e"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:id="@+id/business_application_agreement"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="商家入驻合作协议"
                    android:textColor="#fd3c15"
                    android:textSize="@dimen/sp_12" />

            </LinearLayout>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</LinearLayout>
