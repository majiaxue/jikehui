<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.browsinghistory.BrowsingHistoryActivity">

    <include layout="@layout/page_top" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/browsing_history_rec"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0"
        android:layout_weight="1"></android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:id="@+id/browsing_history_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_47"
        android:layout_alignParentBottom="true"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:visibility="gone">

        <ImageView
            android:id="@+id/browsing_history_check_all"
            android:layout_width="@dimen/dp_29"
            android:layout_height="@dimen/dp_29"
            android:layout_marginLeft="@dimen/dp_15"
            android:padding="@dimen/dp_5"
            android:src="@drawable/icon_weixuanzhong" />

        <TextView
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_7"
            android:layout_weight="1"
            android:text="全选"
            android:textColor="#666666"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/browsing_history_delete"
            android:layout_width="@dimen/dp_68"
            android:layout_height="@dimen/dp_25"
            android:layout_marginRight="@dimen/dp_16"
            android:background="@drawable/bg_5_e85330_f4bb43"
            android:gravity="center"
            android:text="删除"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14" />

    </LinearLayout>

</LinearLayout>
