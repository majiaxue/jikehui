<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_145"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/goods_collection_check"
            android:layout_width="@dimen/dp_39"
            android:layout_height="@dimen/dp_39"
            android:layout_marginLeft="@dimen/dp_10"
            android:padding="@dimen/dp_10"
            android:src="@drawable/vghfgdg"
            android:visibility="gone" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/goods_collection_image"
            android:layout_width="@dimen/dp_125"
            android:layout_height="@dimen/dp_125"
            android:layout_marginLeft="@dimen/dp_10"
            app:roundedCornerRadius="@dimen/dp_5" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_17">

            <TextView
                android:id="@+id/goods_collection_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="2"
                android:text="2019夏季新款纯棉白色短袖女T恤个性字母简约......"
                android:textColor="#333333"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/goods_collection_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/goods_collection_name"
                android:layout_marginTop="@dimen/dp_22"
                android:text="￥39.90"
                android:textColor="#fd3c15"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/goods_collection_payment_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/goods_collection_price"
                android:layout_marginTop="@dimen/dp_9"
                android:text="12345人付款"
                android:textColor="#999999"
                android:textSize="@dimen/sp_10" />

            <TextView
                android:id="@+id/goods_collection_good_reputation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/goods_collection_payment_amount"
                android:layout_marginLeft="@dimen/dp_9"
                android:layout_toRightOf="@id/goods_collection_payment_amount"
                android:text="97%好评"
                android:textColor="#999999"
                android:textSize="@dimen/sp_10" />


            <TextView
                android:id="@+id/goods_collection_shop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/goods_collection_good_reputation"
                android:layout_marginTop="@dimen/dp_15"
                android:text="班迪卡旗舰店"
                android:textColor="#fd3c15"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/goods_collection_go_shop"
                android:layout_width="@dimen/dp_32"
                android:layout_height="@dimen/sp_14"
                android:layout_alignTop="@id/goods_collection_shop"
                android:layout_alignParentRight="true"
                android:background="@drawable/bg_5_fb4_feb"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="进店"
                android:visibility="gone"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/sp_12" />

        </RelativeLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="#f5f5f5" />

</LinearLayout>