<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.refund.RefundActivity">

    <include layout="@layout/page_top" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_22"
        android:layout_marginTop="@dimen/dp_10">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/refund_image"
            android:layout_width="@dimen/dp_92"
            android:layout_height="@dimen/dp_92"
            app:placeholderImageScaleType="fitXY" />

        <TextView
            android:id="@+id/refund_goods_name"
            android:layout_width="@dimen/dp_207"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_13"
            android:layout_toRightOf="@id/refund_image"
            android:ellipsize="end"
            android:lines="2"
            android:textColor="#333333"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:id="@+id/refund_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/refund_goods_name"
            android:layout_alignLeft="@id/refund_goods_name"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/bg_linear5f5"
            android:ellipsize="end"
            android:maxWidth="@dimen/dp_200"
            android:minLines="1"
            android:paddingLeft="@dimen/dp_5"
            android:paddingTop="@dimen/dp_3"
            android:paddingRight="@dimen/dp_5"
            android:paddingBottom="@dimen/dp_3"
            android:text="XXXL"
            android:textColor="#999999"
            android:textSize="@dimen/sp_12" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/refund_cause"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_marginLeft="@dimen/dp_18"
        android:layout_marginRight="@dimen/dp_22"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="退款原因："
            android:textColor="#333333"
            android:textSize="@dimen/sp_14" />

        <View
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/refund_cause_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="点击选择"
            android:textColor="#999999"
            android:textSize="@dimen/sp_12" />

        <ImageView
            android:layout_width="@dimen/dp_7"
            android:layout_height="@dimen/dp_12"
            android:layout_marginLeft="@dimen/dp_10"
            android:src="@drawable/right_back" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginLeft="@dimen/dp_18"
        android:layout_marginRight="@dimen/dp_22"
        android:background="#f3f3f3" />

    <LinearLayout
        android:id="@+id/refund_type"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_marginLeft="@dimen/dp_18"
        android:layout_marginRight="@dimen/dp_22"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="退款类型："
            android:textColor="#333333"
            android:textSize="@dimen/sp_14" />

        <View
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/refund_type_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="点击选择"
            android:textColor="#999999"
            android:textSize="@dimen/sp_12" />

        <ImageView
            android:layout_width="@dimen/dp_7"
            android:layout_height="@dimen/dp_12"
            android:layout_marginLeft="@dimen/dp_10"
            android:src="@drawable/right_back" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginLeft="@dimen/dp_18"
        android:layout_marginRight="@dimen/dp_22"
        android:background="#f3f3f3" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_marginLeft="@dimen/dp_18"
        android:layout_marginRight="@dimen/dp_22"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="退款金额："
            android:textColor="#333333"
            android:textSize="@dimen/sp_14" />

        <View
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_weight="1" />


        <TextView
            android:id="@+id/refund_sum_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:textColor="#999999"
            android:textSize="@dimen/sp_12" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginLeft="@dimen/dp_18"
        android:layout_marginRight="@dimen/dp_22"
        android:background="#f3f3f3" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_18"
        android:layout_marginRight="@dimen/dp_22"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_44"
            android:gravity="center"
            android:text="退款说明："
            android:textColor="#333333"
            android:textSize="@dimen/sp_14" />

        <View
            android:layout_width="@dimen/dp_0"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <EditText
            android:id="@+id/refund_explain_edit"
            android:layout_width="@dimen/dp_200"
            android:layout_height="wrap_content"
            android:background="@null"
            android:gravity="center|right"
            android:hint="(选填)"
            android:paddingTop="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_10"
            android:textColor="#999999"
            android:textSize="@dimen/sp_12" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginLeft="@dimen/dp_18"
        android:layout_marginRight="@dimen/dp_22"
        android:background="#f3f3f3" />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/refund_add_photo"
        android:layout_width="@dimen/dp_45"
        android:layout_height="@dimen/dp_45"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_15"
        app:placeholderImage="@drawable/icon_tianjiazhaopian"
        app:placeholderImageScaleType="fitXY" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_0"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/refund_submit"
        android:layout_width="@dimen/dp_347"
        android:layout_height="@dimen/dp_45"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/dp_24"
        android:background="@drawable/bg_22_jianbian"
        android:gravity="center"
        android:text="提交"
        android:textColor="#f5f5f5"
        android:textSize="@dimen/sp_20" />

</LinearLayout>
