<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/stay_appraise_child_img"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_60"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_15"
        android:background="#cccccc" />

    <TextView
        android:id="@+id/stay_appraise_child_name"
        android:layout_width="@dimen/dp_181"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/stay_appraise_child_img"
        android:layout_marginLeft="@dimen/dp_90"
        android:ellipsize="end"
        android:includeFontPadding="false"
        android:lineHeight="@dimen/dp_17"
        android:maxLines="2"
        android:text="文革问个违和感太让人和任何软通货软通货软通货软通货软通货二尚未发生"
        android:textColor="#333333"
        android:textSize="@dimen/sp_12" />

    <TextView
        android:id="@+id/stay_appraise_child_message"
        android:layout_width="@dimen/dp_181"
        android:layout_height="wrap_content"
        android:layout_below="@id/stay_appraise_child_name"
        android:layout_alignLeft="@id/stay_appraise_child_name"
        android:layout_marginTop="@dimen/dp_5"
        android:ellipsize="end"
        android:lines="1"
        android:text="保湿水80ml [送两包试用装]"
        android:textColor="#999999"
        android:textSize="@dimen/sp_12" />

    <TextView
        android:id="@+id/stay_appraise_child_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/stay_appraise_child_name"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_10"
        android:includeFontPadding="false"
        android:text="￥123.0"
        android:textColor="#333333"
        android:textSize="@dimen/sp_12" />

    <TextView
        android:id="@+id/stay_appraise_child_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/stay_appraise_child_price"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:includeFontPadding="false"
        android:text="X3"
        android:textColor="#999999"
        android:textSize="@dimen/sp_12" />

    <TextView
        android:id="@+id/stay_appraise_child_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_below="@id/stay_appraise_child_message"
        android:layout_marginRight="@dimen/dp_10"
        android:text="共1件商品  合计：￥163.0"
        android:textColor="#333333"
        android:textSize="@dimen/sp_12" />

    <TextView
        android:id="@+id/stay_appraise_child_btn_right"
        android:layout_width="@dimen/dp_70"
        android:layout_height="@dimen/dp_25"
        android:layout_below="@id/stay_appraise_child_total"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_11"
        android:layout_marginBottom="@dimen/sp_12"
        android:background="@drawable/bg_get_code"
        android:gravity="center"
        android:text="立即评价"
        android:textColor="#fc5917"
        android:textSize="@dimen/sp_11" />

    <TextView
        android:id="@+id/stay_appraise_child_btn_left"
        android:layout_width="@dimen/dp_70"
        android:layout_height="@dimen/dp_25"
        android:layout_alignTop="@id/stay_appraise_child_btn_right"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_93"
        android:layout_marginBottom="@dimen/sp_12"
        android:background="@drawable/bg_get_code_clicked"
        android:gravity="center"
        android:text="再次购买"
        android:textColor="#333333"
        android:textSize="@dimen/sp_11" />

</RelativeLayout>