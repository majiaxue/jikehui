<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_81"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/shop_collect_rec_image"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_23"
            app:roundAsCircle="true" />

        <TextView
            android:id="@+id/shop_collect_rec_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_11"
            android:layout_toRightOf="@id/shop_collect_rec_image"
            android:layout_weight="1"
            android:text="private简约男装"
            android:textColor="#333333"
            android:textSize="@dimen/sp_16" />

        <ImageView
            android:id="@+id/shop_collect_rec_menu"
            android:layout_width="@dimen/dp_38"
            android:layout_height="@dimen/dp_24"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_15"
            android:padding="@dimen/dp_10"
            android:src="@drawable/icon_gengduo100" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_alignParentBottom="true"
            android:background="#eeeeee" />
    </RelativeLayout>


    <TextView
        android:id="@+id/shop_collect_rec_un_follow"
        android:layout_width="@dimen/dp_97"
        android:layout_height="match_parent"
        android:background="#fd3c15"
        android:gravity="center"
        android:text="@string/un_follow"
        android:textColor="#ffffff"
        android:textSize="@dimen/sp_14" />


</LinearLayout>