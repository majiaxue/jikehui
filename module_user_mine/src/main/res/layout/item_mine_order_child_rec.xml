<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_10"
    android:orientation="vertical">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/mine_order_child_image"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_60"
        android:background="#cccccc" />

    <TextView
        android:id="@+id/mine_order_child_name"
        android:layout_width="@dimen/dp_181"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/mine_order_child_image"
        android:layout_marginLeft="@dimen/dp_15"
        android:ellipsize="end"
        android:includeFontPadding="false"
        android:lineHeight="@dimen/dp_17"
        android:maxLines="2"
        android:text="文革问个违和感太让人和任何软通货软通货软通货软通货软通货二尚未发生"
        android:textColor="#333333"
        android:textSize="@dimen/sp_12" />

    <TextView
        android:id="@+id/mine_order_child_message"
        android:layout_width="@dimen/dp_181"
        android:layout_height="wrap_content"
        android:layout_below="@id/mine_order_child_name"
        android:layout_alignLeft="@id/mine_order_child_name"
        android:layout_marginTop="@dimen/dp_5"
        android:ellipsize="end"
        android:lines="1"
        android:text="保湿水80ml [送两包试用装]"
        android:textColor="#999999"
        android:textSize="@dimen/sp_12" />

    <TextView
        android:id="@+id/mine_order_child_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_10"
        android:includeFontPadding="false"
        android:text="￥123.0"
        android:textColor="#333333"
        android:textSize="@dimen/sp_12" />

    <TextView
        android:id="@+id/mine_order_child_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/mine_order_child_price"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:includeFontPadding="false"
        android:text="X3"
        android:textColor="#999999"
        android:textSize="@dimen/sp_12" />
</RelativeLayout>