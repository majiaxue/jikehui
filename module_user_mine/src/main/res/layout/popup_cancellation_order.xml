<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorTransparency"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="420dp"
        android:background="@drawable/bg_10_fff_top"
        android:orientation="vertical">

        <TextView
            android:id="@+id/popup_cancellation_order_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_17"
            android:text="取消订单"
            android:textSize="@dimen/sp_20" />

        <ImageView
            android:id="@+id/popup_cancellation_order_close"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_5"
            android:padding="@dimen/dp_10"
            android:src="@drawable/icon_guanbi10" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/popup_cancellation_order_text"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_15"
            android:text="取消订单的原因"
            android:textColor="#666666"
            android:textSize="@dimen/dp_15" />

        <RadioGroup
            android:id="@+id/popup_cancellation_order_radio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/popup_cancellation_order_text"
            android:layout_marginTop="@dimen/dp_45"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/popup_cancellation_order_but1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginRight="@dimen/dp_15"
                android:button="@null"
                android:drawableRight="@drawable/select_popup"
                android:text="不想购买了"
                android:checked="true"
                android:textColor="#333333"
                android:textSize="@dimen/sp_17" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="#e1e1e1" />

            <RadioButton
                android:id="@+id/popup_cancellation_order_but2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginRight="@dimen/dp_15"
                android:button="@null"
                android:drawableRight="@drawable/select_popup"
                android:text="信息填写错误"
                android:textColor="#333333"
                android:textSize="@dimen/sp_17" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="#e1e1e1" />

            <RadioButton
                android:id="@+id/popup_cancellation_order_but3"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginRight="@dimen/dp_15"
                android:button="@null"
                android:drawableRight="@drawable/select_popup"
                android:text="商品缺货"
                android:textColor="#333333"
                android:textSize="@dimen/sp_17" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="#e1e1e1" />

            <RadioButton
                android:id="@+id/popup_cancellation_order_but4"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginRight="@dimen/dp_15"
                android:button="@null"
                android:drawableRight="@drawable/select_popup"
                android:text="商品降价"
                android:textColor="#333333"
                android:textSize="@dimen/sp_17" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="#e1e1e1" />

            <RadioButton
                android:id="@+id/popup_cancellation_order_but5"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginRight="@dimen/dp_15"
                android:button="@null"
                android:drawableRight="@drawable/select_popup"
                android:text="其他原因"
                android:textColor="#333333"
                android:textSize="@dimen/sp_17" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="#e1e1e1" />
        </RadioGroup>

        <TextView
            android:id="@+id/popup_cancellation_order_submit"
            android:layout_width="@dimen/dp_347"
            android:layout_height="@dimen/dp_45"
            android:layout_below="@id/popup_cancellation_order_radio"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/dp_11"
            android:background="@drawable/bg_22_jianbian"
            android:gravity="center"
            android:text="提交"
            android:textColor="#f5f5f5"
            android:textSize="@dimen/sp_20" />

    </RelativeLayout>

</LinearLayout>